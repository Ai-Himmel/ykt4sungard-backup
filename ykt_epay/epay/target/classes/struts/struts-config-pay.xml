<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN"
          "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">

<struts-config>
	<form-beans>
		<form-bean name="payForm" type="org.apache.struts.validator.DynaValidatorForm">
			<form-property name="v_shopid" type="java.lang.String" />
			<form-property name="v_account" type="java.lang.String" />
			<form-property name="v_oid" type="java.lang.String" />
			<form-property name="v_amount" type="java.lang.String" />
			<form-property name="v_currency" type="java.lang.String" />
			<form-property name="v_url" type="java.lang.String" />
			<form-property name="v_code" type="java.lang.String" />
			<form-property name="v_date" type="java.lang.String" />
			<form-property name="v_time" type="java.lang.String" />
			<form-property name="v_name" type="java.lang.String" />
			<form-property name="v_remark" type="java.lang.String" />
			<form-property name="name" type="java.lang.String" />
			<form-property name="password" type="java.lang.String" />
        </form-bean>
        <form-bean name="transForm" type="org.apache.struts.validator.DynaValidatorForm">
            <form-property name="custid" type="java.lang.String"/>
            <form-property name="stuempno" type="java.lang.String"/>
            <form-property name="status" type="java.lang.String"/>
            <form-property name="starttime" type="java.lang.String"/>
            <form-property name="endtime" type="java.lang.String"/>
            <form-property name="revflag" type="java.lang.String"/>
        </form-bean>
          
	</form-beans>

	<action-mappings>
		<action path="/payManager" type="org.king.security.web.action.EpayAction" parameter="method" name="payForm" validate="false" unknown="false">
			<forward name="topaylogin" path="topaylogin" redirect="false" />
			<forward name="paylogin" path="paylogin" redirect="false" />
			<forward name="epay" path="epay" redirect="false" />
			<forward name="epaysuccess" path="epaysuccess" redirect="false" />
			<forward name="epayfaile" path="epayfaile" redirect="false" />
		</action>
		
		<action path="/epayTransManager" type="org.king.security.web.action.TransAction" parameter="method" name="transForm" validate="true" unknown="false">
			<forward name="listTransdtl" path="listepaytransdtl" redirect="false" />
			<forward name="revok" path="listepaytransdtl" redirect="false" />
			
		</action>
		
		
	</action-mappings>
</struts-config>
