<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
    <!-- ************************** DAO SETTING *********************************-->
    <!-- DAO object: Hibernate implementation -->


    <!-- ************************** security Acl SETTING *************************-->
    <bean id="acl" class="org.king.security.service.impl.AclImpl">
    </bean>
	<bean id="tEpayActiveinfoDAO" class="org.king.security.dao.hibernate.TEpayActiveinfoDAOHibernate">
		<property name="baseDAO">
			<ref bean="baseDAO" />
		</property>
	</bean>
	<bean id="tNetaccDAO" class="org.king.security.dao.hibernate.TNetaccDAOHibernate">
		<property name="baseDAO">
			<ref bean="baseDAO" />
		</property>
	</bean>
	<bean id="tShopaccDAO" class="org.king.security.dao.hibernate.TshopaccDAOHibernate">
		<property name="baseDAO">
			<ref bean="baseDAO" />
		</property>
	</bean>
	<bean id="tEpayRecordDAO" class="org.king.security.dao.hibernate.TEpayRecordDAOHibernate">
		<property name="baseDAO">
			<ref bean="baseDAO" />
		</property>
	</bean>
	<bean id="tOperatorDAO"  class="org.king.security.dao.hibernate.TOperatorDAOHibernate">
	    <property name="baseDAO">
			<ref bean="baseDAO" />
		</property>
	</bean>
	<bean id="tCardphytypeDAO" class="org.king.security.dao.hibernate.TCardphytypeDAOHibernate">
		<property name="baseDAO">
			<ref bean="baseDAO" />
		</property>
	</bean>
    <!-- ************************** SERVICE SETTING *****************************-->
    <!-- ***** security SERVICE *****-->
    <bean id="securityService" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
        <property name="transactionManager">
            <ref bean="transactionManager"/>
        </property>
        <property name="target">
            <bean class="org.king.security.service.impl.SecurityServiceImpl">
                <property name="acl">
                    <ref local="acl"/>
                </property>
                <property name="jdbcTemplate">
                    <ref bean="jdbcTemplate"/>
                </property>
                <property name="lsfb">
                    <ref bean="&amp;sessionFactory"/>
                </property>
                <property name="tEpayActiveinfoDAO">
                    <ref bean="tEpayActiveinfoDAO"/>
                </property>
                <property name="tNetaccDAO">
                    <ref bean="tNetaccDAO"/>
                </property>
                <property name="tShopaccDAO">
                    <ref bean="tShopaccDAO"/>
                </property>
                 <property name="tOperatorDAO">
                    <ref bean="tOperatorDAO"/>
                </property>
            </bean>
        </property>
        <property name="transactionAttributes">
            <props>
                <prop key="initSecurity">PROPAGATION_REQUIRED,-BusinessException</prop>
                <prop key="login">PROPAGATION_REQUIRED,-BusinessException</prop>
                <prop key="remove*">PROPAGATION_REQUIRED,-BusinessException</prop>
                <prop key="find*">PROPAGATION_REQUIRED,readOnly,-BusinessException</prop>
                <prop key="createResource">PROPAGATION_REQUIRED,-BusinessException,-RightAlreadyExistException</prop>
                <prop key="updateResource">PROPAGATION_REQUIRED,-BusinessException</prop>
                <prop key="saveRole">PROPAGATION_REQUIRED,-BusinessException,-GroupAlreadyExistException</prop>
                <prop key="changeAccountRole">PROPAGATION_REQUIRED,-BusinessException</prop>
                <prop key="updateRole">PROPAGATION_REQUIRED,-BusinessException</prop>
                <prop key="save*">PROPAGATION_REQUIRED</prop>
                <prop key="delete*">PROPAGATION_REQUIRED</prop>
                <prop key="grant*">PROPAGATION_REQUIRED</prop>
                <prop key="*">PROPAGATION_REQUIRED</prop>
            </props>
        </property>
    </bean>
</beans>
