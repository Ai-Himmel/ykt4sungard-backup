<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN"
          "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">

<struts-config>
	<form-beans>
		<form-bean name="loginForm" type="org.apache.struts.validator.DynaValidatorForm">
			<form-property name="name" type="java.lang.String" />
			<form-property name="password" type="java.lang.String" />
			<form-property name="acctype" type="java.lang.String" />
		</form-bean>
		<form-bean name="accountForm" type="org.apache.struts.validator.DynaValidatorForm">
			<form-property name="repassword" type="java.lang.String" />
		</form-bean>
		<form-bean name="blankForm" type="org.apache.struts.action.DynaActionForm" />
		<form-bean name="searchForm" type="org.apache.struts.validator.DynaValidatorForm">
			<form-property name="para" type="java.lang.String" />
		</form-bean>
	</form-beans>

	<action-mappings>
		<action path="/login" forward="/WEB-INF/pages/security/login.jsp" />	
		<action path="/login2" forward="/WEB-INF/pages/security/login2.jsp" />
		<action path="/activate" forward="/WEB-INF/pages/security/activate.jsp" />
		<action path="/logoutAction" parameter="method" type="org.king.security.web.action.SecurityAction">
			<forward name="success" path="/login.do" redirect="false" />
			<forward name="faile" path="/login.do" redirect="false" />
		</action>
		<action path="/loginAction" parameter="method" type="org.king.security.web.action.SecurityAction" name="loginForm" scope="request">
			<forward name="success" path="/main.do" redirect="true"/>
			<forward name="faile" path="/login.do" />
		</action>
		<action path="/activateAction" parameter="method" type="org.king.security.web.action.SecurityAction" scope="request">
			<forward name="success" path="/login.do" />
			<forward name="faile" path="/activate.do" />
			<forward name="findacc" path="/WEB-INF/pages/security/findmyacc.jsp"></forward>
		</action>
		<action path="/getLoginNetAcc" parameter="method" type="org.king.security.web.action.SecurityAction" scope="request">
			<forward name="success" path="/WEB-INF/pages/security/netaccinfo.jsp" />
			<forward name="faile" path="/msg.do" redirect="false" />
		</action>
		<action path="/getLoginShopAcc" parameter="method" type="org.king.security.web.action.SecurityAction" scope="request">
			<forward name="success" path="/WEB-INF/pages/security/shopaccinfo.jsp" />
			<forward name="faile" path="/msg.do" redirect="false" />
		</action>
		<action path="/getLoginOper" parameter="method" type="org.king.security.web.action.SecurityAction" scope="request">
			<forward name="success" path="/WEB-INF/pages/security/operinfo.jsp" />
			<forward name="faile" path="/msg.do" redirect="false" />
		</action>
		
		
		<action path="/userAccessAction" parameter="method" type="org.king.security.web.action.UserAccessAction" name="loginForm" scope="request" validate="false" unknown="false">
			<forward name="success" path="loginDef" redirect="false" />
			<forward name="faile" path="loginDef" redirect="false" />
		    <forward name="tongjifirst" path="tongjifirst" redirect="false" />
		    <forward name="tongjimainsimple" path="tongjimainsimple" redirect="false" />
		    <forward name="tongjimain" path="tongjimain" redirect="false" />
		    <forward name="accesslist" path="accesslist" redirect="false" />
		    <forward name="mainaccesslistsimple" path="mainaccesslistsimple" redirect="false" />
		    <forward name="mainaccesslist" path="mainaccesslist" redirect="false" />
		</action>

		<action path="/noRight" parameter="method" type="org.king.security.web.action.SecurityAction">
			<forward name="success" path="/msg.do" redirect="false" />
			<forward name="faile" path="/login.do" redirect="false" />
		</action>
		<action path="/msg" forward="systemMsgDef" />
		<action path="/about" forward="aboutDef" />

		<action path="/getMenu" type="org.king.security.web.action.SecurityAction" parameter="method">
			<forward name="success" path="/WEB-INF/pages/menu.jsp" redirect="false" />
			<forward name="faile" path="/msg.do" redirect="false" />
		</action>
		<action path="/header" forward="headerDef" />
		<action path="/mainbanner" forward="mainbannerDef"/>


       
	</action-mappings>
</struts-config>
