<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN"
          "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">

<struts-config>
	<form-beans>
		<form-bean name="shopInfoForm" type="org.apache.struts.validator.DynaValidatorForm">
			<form-property name="tShopinfo" type="org.king.security.domain.TEpayShopinfo" />
			<form-property name="type" type="java.lang.String"/>
		</form-bean>
	</form-beans>

	<action-mappings>
		
		 <!-- 商户信息维护 -->
       <action path="/shopInfoManager" type="org.king.security.web.action.ShopAction" name="shopInfoForm" parameter="method" validate="false" scope="request" >
			<forward name="success" path="updateShopInfo"/>
			<forward name="faile" path="/msg.do" redirect="true" />
		</action>
		<action path="/editShopInfo" parameter="method" type="org.king.security.web.action.ShopAction"  name="shopInfoForm" 
		         validate="true" scope="request" >
			<forward name="result" path="updateShopInfo" redirect="false" />
		</action>
	</action-mappings>
</struts-config>
