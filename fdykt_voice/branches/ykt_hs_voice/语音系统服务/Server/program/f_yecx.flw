//余额查询

if @loginok:s<>"Y" then
    call f_connect
endif

Title "余额查询"

set @cmd:s="R| | |9|001|1| |@client:s|DHWT|"
sendreceive @cmd:s,@ans:s
set @ret:s=substr(@ans:s,1+3,'|')
if @ret:s=="N" then
    PlayFile "查询出错"
    Play
    WaitPlayEnd
    return
endif

set @kyzj:s=substr(@ans:s,3+3,'|')
PlayFile "027_可用余额为"
PlayMoney @kyzj:s
Play 
WaitPlayEnd

return
