int F847401(TRUSERID *handle,int iRequest,ST_PACK *in_pack,int *pRetCode,char *szMsg)
{
	int ret = 0;
	switch(in_pack->sstatus0[0])
	{
		//添加
		case 'A':
			ret=Add847401(in_pack,szMsg);
			break;
		//查询
		case 'Q':
			ret=Read847401(handle,iRequest,in_pack,pRetCode,szMsg);
			break;
		//删除
		case 'S':
			ret=SUpdate847401(in_pack);
			break;
			
		//失败
		
		case 'F':
			ret=FUpdate847401(in_pack);
			break;
		
		default:
			ret=E_INPUT_DATA_INVAILD;
			break;
	}
	if(ret)
	{
		*pRetCode=ret;
		return -1;
	}
	return 0;
}

