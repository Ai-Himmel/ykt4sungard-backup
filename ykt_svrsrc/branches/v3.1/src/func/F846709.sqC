ESQL #include "pubfunc.h"
ESQL #include "dbfunc.h"
ESQL #include "dbfunc_foo.h"
ESQL #include "acctrans.h"
ESQL #include "busqc.h"
ESQL #include <string>
ESQL #include <sstream>
ESQL using namespace std;
EXEC SQL INCLUDE SQLCA;

int F846709(TRUSERID *handle,int iRequest,ST_PACK *rPack,int *pRetCode,char *szMsg)
{
	EXEC SQL BEGIN DECLARE SECTION;
	sqlint32 transcnt=0;//交易次数
	sqlint32 personcnt=0;//交易人数
	double	 transamt=0;	//交易发生额
	double   rakeoffrate=0;	//佣金费率
	double   rakeoffamt=0;	//佣金金额
	double	 accamt=0;	//结算金额
	char	 shopname[241]="";//商户名
	sqlint32 shopid=0;		  //商户号
	sqlint16 indicator=0;
	char	 h_sqlcmd[8192]="";
	EXEC SQL END DECLARE SECTION;
	
	int ret = 0;
	int row = 0;
	ST_CPACK aPack;
	ST_PACK *outPack = &(aPack.pack);
	ResetNormalCPack(&aPack,0,1);
	SetCol(handle,F_LSERIAL1,F_LVOL3,F_VSVARSTR1,F_LVOL0,F_LVOL1,F_DAMT1,F_DRATE0,F_DAMT2,F_DAMT3,0);
	shopid=rPack->lvol3;
	if(!shopid)
		shopid=1;
	int level=rPack->lsafe_level;
	int shoptype=rPack->lvol1;
	char accdate1[9]="";
	char accdate2[9]="";
	des2src(accdate1,rPack->sdate1);
	des2src(accdate2,rPack->sdate2);	
	if(!level)
		level=3;
	stringstream sql;
	sql<<" select t2.shopname,t2.rakeoffrate,t1.shopid,t1.totalcnt,t1.personcnt,t1.totaltransamt,t1.totalrakeoffamt,t1.totalaccamt from ";
	sql<<" (select c.shopid,sum(b.transcnt) totalcnt,sum(b.personcnt) personcnt,";
	sql<<" sum(b.transamt) totaltransamt,sum(b.rakeoffamt) totalrakeoffamt, sum(b.transamt-b.rakeoffamt) totalaccamt";
	sql<<" from ";
	sql<<" ( ";
	sql<<" select shopid,level lev ";
	sql<<" from ykt_cur.t_shop  where status='1' ";
	sql<<" start with shopid="<<shopid;
	sql<<" connect by prior shopid=fshopid ";
	sql<<" ) e ";
	sql<<" left join  ";
	sql<<" ( ";
	sql<<" select shopid, ";
	sql<<" connect_by_root shopid leafid ";
	sql<<" from ykt_cur.t_shop where status='1' ";
	sql<<" start with shoptype>0 ";
	sql<<" connect by prior fshopid=shopid ";
	sql<<" order by shopid,level ";
	sql<<" ) c ";
	sql<<" on e.shopid=c.shopid and e.lev<="<<level;
	sql<<" left join ykt_cur.t_shop a ";
	sql<<" on c.leafid=a.shopid ";
	sql<<" left join ykt_cur.t_rptshoprakeoff b ";
	sql<<" on a.accno=b.accno ";
	sql<<" where b.accdate>='"<<accdate1<<"' and b.accdate<='"<<accdate2<<"'";
	if(shoptype>0)
		sql<<" and a.shoptype="<<shoptype;
	sql<<" group by c.shopid ";
	sql<<" ) t1 ";
	sql<<" left join  ";
	sql<<" (select fshopid,shopid,rakeoffrate,LPAD('  ',(LEVEL-1)*3,'  ')||shopname shopname  ";  
	sql<<"	,SYS_CONNECT_BY_PATH(lpad(to_char(shopid),5,'0'),'-') ord ,to_char(shopid), "; 
	sql<<"	rpad('0',5,to_char(shopid)) ";
	sql<<"	from YKT_CUR.t_shop a  where a.status='1' ";
	sql<<"	START WITH shopid="<<shopid<<" CONNECT BY PRIOR shopid=fshopid ";
	sql<<"	) t2 ";
	sql<<"  on t1.shopid=t2.shopid ";	
	sql<<" order by t2.ord,t2.shopid";
	strcpy(h_sqlcmd,sql.str().c_str());
	EXEC SQL PREPARE query_stmt FROM :h_sqlcmd;
	if(SQLCODE)
	{
		CHECK_DB_ERR;
		return E_DB_PREPARE;
	}
	EXEC SQL DECLARE rptdailyacc_cur CURSOR FOR query_stmt;
	if(SQLCODE)
	{
		CHECK_DB_ERR;
		return E_DB_CURSOR_DECLARE;
	}
	EXEC SQL  OPEN rptdailyacc_cur;
	if(SQLCODE)
	{
		CHECK_DB_ERR;
		return E_DB_CURSOR_OPEN;
	}
	while(1)
	{
		shopname[0]=0;
		rakeoffrate=0;
		shopid=0;
		transcnt=0;
		transamt=0;
		rakeoffamt=0;
		accamt=0;
		EXEC SQL FETCH rptdailyacc_cur INTO
		:shopname:indicator,
		:rakeoffrate:indicator,
		:shopid:indicator,
		:transcnt:indicator,
		:personcnt:indicator,
		:transamt:indicator,
		:rakeoffamt:indicator,
		:accamt:indicator;
		if(SQLCODE)
		{
		  ret=SQLCODE;
		  CHECK_DB_ERR;
		  EXEC SQL CLOSE rptdailyacc_cur;
		  if(DB_NOTFOUND==ret)
		  {
			if(row)
			  break;
			else
			  return E_DB_RPTACCLEDGER_N;
		  }
		  else
			return E_DB_RPTACCLEDGER_R;
		}
		row++;
		outPack->lserial1=row;					//行号
		rtrim(shopname);
		strcpy(outPack->vsvarstr1,shopname);
		outPack->lvol3=shopid;
		outPack->drate0=D4U5(rakeoffrate*100,2);
		outPack->lvol0=transcnt;
		outPack->lvol1= personcnt;
		outPack->damt1=transamt;
		outPack->damt2=rakeoffamt;
		outPack->damt3=accamt;
		PutRow(handle,outPack,pRetCode,szMsg);
		if(row%9==0)
		  AnswerDataPart(handle,*pRetCode,szMsg);
	}
	AnswerData(handle,*pRetCode,szMsg);
	return 0;
}
