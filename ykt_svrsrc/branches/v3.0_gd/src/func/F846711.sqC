			outPack->sserial1[0]=0;
		if(amtcmp(total_outamt,0)!=0)
			sprintf(outPack->sserial2,"%.2lf",total_outamt);
		else
			outPack->sserial2[0]=0;
		sprintf(outPack->sserial3,"%.2lf",total_inamt-total_outamt);
		PutRow(handle,outPack,pRetCode,szMsg);
