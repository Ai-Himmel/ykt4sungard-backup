			outPack->sserial2[0]=0;
		sprintf(outPack->sserial3,"%.2lf",oper_inamt-oper_outamt);
		PutRow(handle,outPack,pRetCode,szMsg);
		*/
		AnswerData(handle,*pRetCode,szMsg);
		return 0;
