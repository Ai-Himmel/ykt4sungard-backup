create table t_operauth
(
  opercode varchar2(8),
  authtype number,
  authorizer varchar2(8),
  authdate varchar2(8)
)
begin
action modename ykt_cur end
action add end
action read_by opercode authtype end
action update_by opercode authtype end
action del_by opercode authtype end
action read_lock_by c0 opercode authtype end
action update_lock_by c0 end
action del_lock_by c0 end
action free_lock_by c0 end
end