#define _IN_SQC_
ESQL #include "pubdef.h"
ESQL #include "pubdb.h"
ESQL #include "dbfunc.h"
ESQL #include "errdef.h"
ESQL #include "dictionary.h"
ESQL #include "fdsqc.h"
ESQL #include <stdio.h>
ESQL #include <stdlib.h>
ESQL #include <syslog.h>
ESQL #include <string.h>

EXEC SQL INCLUDE SQLCA; 

int F847159(TRUSERID *handle,int iRequest,ST_PACK *rPack,int *pRetCode,char *szMsg)
{
	EXEC SQL BEGIN DECLARE SECTION;
		char	 	ho_stuemp_no[20+1] = "";		//学号 员工号
		char	  	ho_cut_name[150+1] = "";		//姓名
		char	  	ho_man_id[50+1] = "";		//身份证号
		sqlint32  	ho_cut_type = 0;				//客户类别
		sqlint32   ho_cut_state = 0;			//客户状态
		sqlint32   ho_cut_id = 0;				//客户号
		char	  	ho_classdept_no[17] = "";	//院系或单位号
		char	  	ho_reg_time[27+1] = "";		//注册时间
		char	  	ho_tel[20+1] = "";			//联系电话
		char	  	ho_sex[1+1] = "";				//性别
		double	ho_cost_fee = 0.00;			//卡成本
		double	ho_deposit_fee = 0.00;		//押金
		double	ho_in_fee = 0.00;				//管理费\手续费
		char 	ho_deptfull_name[512]="";
		
		sqlint32	hi_Cut_id = 0;				
		char		hi_StuEmp_no[21+1] = "";
		char		hi_Cut_name[150+1] = "";
		char		hi_man_id[51] = "";
		
		char		h_stmt[1024] = "";				//临时存储SQL语句
		sqlint16   i = 0;
	EXEC SQL END DECLARE SECTION;

	int ret=0;
	char	h_temp[500] ="";						//临时存储数据
	int count = 0;
	
	ST_CPACK aPack;
	memset(&aPack, 0, sizeof(aPack));	
	ST_PACK *out_pack = &(aPack.pack);
	ResetNormalCPack(&aPack,0,1);
	SetCol(handle,0);

	/*	准备输入数据	*/
	hi_Cut_id = atol(rPack->sholder_ac_no);		//客户号
	des2src(hi_StuEmp_no, rPack->scust_auth);  	//学号\员工号
	des2src(hi_Cut_name, rPack->sname);			//姓名
	des2src(hi_man_id, rPack->scert_no);				//身份证号
	
	/*	准备查询语句	*/
	sprintf(h_stmt, "SELECT A.CUT_ID,A.CUT_TYPE,A.CUT_STATE,A.CUT_NAME,A.MAN_ID, \
					A.STUEMP_NO,A.SEX,A.CLASSDEPT_NO,A.REG_TIME,TEL, \
					B.COST_FEE,B.IN_FEE,B.DEPOSIT_FEE,d.dept_fullname  \
					FROM YKT_CUR.T_CIF_CUSTOMER A  \
					left join  \
					(select distinct dept_code,dept_name_full dept_fullname  \
							from ykt_cur.t_cif_dept ) d \
						ON a.CLASSDEPT_NO=d.dept_code \
					JOIN YKT_CUR.T_CIF_CUTTYPEFEE B ON (A.CUT_TYPE = B.CUT_TYPE) \
					right join \
					    (select * from ykt_cur.t_pif_card c WHERE substr(C.STATE_ID,1,2)= '11'  \
						 and C.TYPE_ID<>3) c \
						 on a.cut_id=c.cosumer_id \
					WHERE  A.Cut_State !=%d",CUSTSTAT_LOGOUT);	
	strcat(h_stmt,h_temp);			
	
	sprintf(h_temp," AND A.CUT_TYPE != %d ",CUSTTYPE_SHOP);    			//不返回客户类型为商户的信息
	strcat(h_stmt,h_temp);
	
	//组合SQL语句
	if(hi_Cut_id > 0)
	{
		sprintf(h_temp,"  AND A.CUT_ID = %d ", hi_Cut_id);
		strcat(h_stmt,h_temp);
	}

	if(strlen(hi_StuEmp_no) > 0)
	{
		sprintf(h_temp,"  AND  A.STUEMP_NO like '%%%s%%'  ", hi_StuEmp_no);
		strcat(h_stmt,h_temp);
	}

	if(strlen(hi_Cut_name) > 0)
	{
		sprintf(h_temp,"  AND A.CUT_NAME like  '%%%s%%' ", hi_Cut_name);
		strcat(h_stmt,h_temp);
	}

	if(strlen(hi_man_id) > 0)
	{
		sprintf(h_temp,"  AND  A.MAN_ID like  '%%%s%%'  ", hi_man_id);
		strcat(h_stmt,h_temp);
	}

	//printf("h_stmt[%s]\n",h_stmt);
	EXEC SQL PREPARE query_stmt FROM :h_stmt;
	if (SQLCODE != 0)
	{
		*pRetCode = E_DB_CUSTOMER_QUERY_P;
		db_chk_err(__FILE__, __LINE__, &sqlca) ;
		goto L_RETU;
	}

	EXEC SQL  DECLARE S CURSOR FOR query_stmt;
	EXEC SQL OPEN S;
	SetCol(handle,F_SCUST_AUTH,F_SNAME,F_SCERT_NO,F_LVOL0,F_LVOL1,F_LVOL2,F_SCUST_TYPE,F_SCUST_NO,F_SCUST_AUTH2,F_SPHONE,F_DAMT1,F_DAMT2,F_DAMT3,F_VSVARSTR0,0);


	while(SQLCODE == 0)
	{
		/*	清空数据	*/
		memset(ho_stuemp_no,0,sizeof(ho_stuemp_no));
		memset(ho_cut_name,0,sizeof(ho_cut_name));
		memset(ho_man_id,0,sizeof(ho_man_id));
		ho_cut_type = 0;
		ho_cut_state = 0;
		ho_cut_id = 0;
		memset(ho_classdept_no,0,sizeof(ho_classdept_no));
		memset(ho_reg_time,0,sizeof(ho_reg_time));
		memset(ho_tel,0,sizeof(ho_tel));
		memset(ho_sex,0,sizeof(ho_sex));
		ho_cost_fee = 0.00; 
		ho_in_fee = 0.00;
		ho_deposit_fee = 0.00;
		memset(ho_deptfull_name,0,sizeof ho_deptfull_name);

		EXEC SQL FETCH S INTO 
			:ho_cut_id:i,     
			:ho_cut_type:i,   
			:ho_cut_state:i,  
			:ho_cut_name:i,   
			:ho_man_id:i,     
			:ho_stuemp_no:i,  
			:ho_sex:i,        
			:ho_classdept_no:i,
			:ho_reg_time:i,   
			:ho_tel:i,        
			:ho_cost_fee:i,   
			:ho_in_fee:i,     
			:ho_deposit_fee:i,
			:ho_deptfull_name:i;
		
		ret=SQLCODE;
		if(ret )
		{
			db_chk_err(__FILE__, __LINE__, &sqlca) ;
			EXEC SQL CLOSE S;
			if(DB_NOTFOUND==ret)
			{
				if(count == 0)
				{
					*pRetCode = E_DB_CUSTOMER_N;
				goto L_RETU;
				}
				else
					break;
			}
			else
			{
				*pRetCode = E_DB_CUSTOMER_R;
				goto L_RETU;
			}
		}
		count++;
		trim(ho_classdept_no);
		//GetDeptFullNameByDeptcode(ho_classdept_no, out_pack->vsvarstr0);
		des2src(out_pack->vsvarstr0,ho_deptfull_name);
		/*	准备输出信息	*/
		des2src(out_pack->scust_auth, ho_stuemp_no);	//学号或员工号
		des2src(out_pack->sname, ho_cut_name);			//客户名称
		des2src(out_pack->scert_no, ho_man_id);			//身份证号
		out_pack->lvol0 = ho_cut_type;											//客户类别
		out_pack->lvol1 = ho_cut_state;											//客户状态
		out_pack->lvol2 = ho_cut_id;												//客户号
		des2src(out_pack->scust_no, ho_classdept_no);		//班级或部门名称
		des2src(out_pack->scust_auth2, ho_reg_time);	//注册时间
		des2src(out_pack->sphone, ho_tel);			//电话
		des2src(out_pack->scust_type, ho_sex);	//性别
		//out_pack->damt1 = ho_cost_fee;									//卡成本费
		out_pack->damt2 = ho_in_fee;    									//手续费
		out_pack->damt3= ho_deposit_fee;									//押金
		
		PutRow(handle,out_pack,pRetCode,szMsg);
	}
	return 0;
L_RETU:
	return -1;
}
