	{
	    if(DB_NOTFOUND==ret)
	        return E_DB_DEVICE_N;
	    else
	        return E_DB_DEVICE_R;
	}
	device.status[0]=STATUS_LOGOUT;
	ret=DB_t_device_update_lock_by_c0(&device);
	if(ret)
	{
	    if(DB_NOTFOUND==ret)
	        return E_DB_DEVICE_N;
	    else
	        return E_DB_DEVICE_U;
	}
