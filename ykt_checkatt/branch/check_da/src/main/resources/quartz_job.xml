<?xml version="1.0" encoding="UTF-8"?>
<quartz>
    <job>
        <job-detail>
            <name>PersonTaskJob</name>
            <group>DoorJobGroup</group>
            <job-class>org.king.check.door.PersonsTask</job-class>
        </job-detail>
        <trigger>
            <cron>
                <name>TriggerPersonTaskJob</name>
                <group>triggerjob</group>
                <job-name>PersonTaskJob</job-name>
                <job-group>DoorJobGroup</job-group>
                <!--
                <cron-expression>0/30 * * * * ?</cron-expression>
                -->
                <cron-expression>0 10 0 ? * 2</cron-expression>
            </cron>
        </trigger>
    </job>
    <job>
        <job-detail>
            <name>CheckReportJob</name>
            <group>CheckReportGroup</group>
            <job-class>org.king.check.door.ReportTask</job-class>
        </job-detail>
        <trigger>
            <cron>
                <name>TriggerCheckReportJob</name>
                <group>triggerjob</group>
                <job-name>CheckReportJob</job-name>
                <job-group>CheckReportGroup</job-group>
                <cron-expression>0 30 23 ? * *</cron-expression>
            </cron>
        </trigger>
    </job>
    <job>
        <job-detail>
            <name>RoomStateJob</name>
            <group>RoomStateGroup</group>
            <job-class>org.king.check.door.RoomElecTask</job-class>
        </job-detail>
        <trigger>
            <cron>
                <name>TriggerRoomStateJob</name>
                <group>triggerjob</group>
                <job-name>RoomStateJob</job-name>
                <job-group>RoomStateGroup</job-group>
                <cron-expression>0 0/3 8-22 * * ? </cron-expression>
            </cron>
        </trigger>
    </job>
    <job>
        <job-detail>
            <name>RefreshDepartmentJob</name>
            <group>RefreshDepartmentGroup</group>
            <job-class>org.king.check.door.DepartmentTask</job-class>
        </job-detail>
        <trigger>
            <cron>
                <name>TriggerRefreshDepartmentJob</name>
                <group>triggerjob</group>
                <job-name>RefreshDepartmentJob</job-name>
                <job-group>RefreshDepartmentGroup</job-group>
                <cron-expression>0 30 0 ? * *</cron-expression>
            </cron>
        </trigger>
    </job>
    <job>
        <job-detail>
            <name>SyncDataJob</name>
            <group>SyncJobGroup</group>
            <job-class>org.king.check.door.SyncDataTask</job-class>
        </job-detail>
        <trigger>
            <cron>
                <name>TriggerSyncDataJob</name>
                <group>triggerjob</group>
                <job-name>SyncDataJob</job-name>
                <job-group>SyncJobGroup</job-group>
                <cron-expression>0 0 15 ? * 6</cron-expression>
            </cron>
        </trigger>
    </job>
    <job>
        <job-detail>
            <name>ImportDataJob</name>
            <group>ImportJobGroup</group>
            <job-class>org.king.check.door.ImportDataTask</job-class>
        </job-detail>
        <trigger>
            <cron>
                <name>TriggerImportDataJob</name>
                <group>triggerjob</group>
                <job-name>ImportDataJob</job-name>
                <job-group>ImportJobGroup</job-group>
                <cron-expression>0 0 18 ? * 1</cron-expression>
            </cron>
        </trigger>
    </job>
    <job>
        <job-detail>
            <name>CleanDoorJob</name>
            <group>CleanDoorGroup</group>
            <job-class>org.king.check.door.CleanDoorTask</job-class>
        </job-detail>
        <trigger>
            <cron>
                <name>TriggerCleanDoorJob</name>
                <group>triggerjob</group>
                <job-name>CleanDoorJob</job-name>
                <job-group>CleanDoorGroup</job-group>
                <cron-expression>0 10 0 ? * 1</cron-expression>
            </cron>
        </trigger>
    </job>
</quartz>