<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">
<struts-config>
  <form-beans>
    <form-bean name="customerPwdUpdateForm" type="com.kingstargroup.fdykt.trade.CustomerPwdUpdateForm" />
    <form-bean name="tradeSerialForm" type="com.kingstargroup.fdykt.trade.TradeSerialForm" />
    <form-bean name="pwdForm" type="org.apache.struts.validator.DynaValidatorForm"/>
			
			
  </form-beans>
  <global-forwards>
    <forward name="index" path="/pages/index.jsp" />
    <!--logon with a card-->
    <forward name="logon" path="/pages/logon.jsp" />
    
    <forward name="msg" path="/pages/index.jsp"/>
    
    <forward name="yhkw" path="pages/yhkw.jsp"/>
    
    <forward name="xykw" path="/pages/yykw.jsp"/>
    
    <forward name="devicelogon" path="/pages/devicelogon.jsp"/>
    
    <forward name="returninfo" path="/pages/returninfo.jsp"/> 
    
    
    
    
  </global-forwards>
  <action-mappings>
      
     <action path="/zzyw" forward="/pages/zzyw.jsp"/>
      
  	 <action path="/admin" forward="/pages/admin.jsp" />
  	 
  	 <action path="/jymx" forward="/pages/jymx.jsp" />
  	 
  	 <action path="/xykw" forward="/pages/xykw.jsp" />
  	 
  	 <action path="/devicelogon"  scope="request" type="com.kingstargroup.fdykt.trade.DeviceLogonAction">
  	   
  	 </action>
  	 
  	 
  	 <action path="/dsdj" scope="request" type="com.kingstargroup.fdykt.trade.GetGroupAction">
  	   <forward name="dsdj"  path="/pages/dsdj.jsp"/>
  	 </action>
  	 <!--校园卡转帐  -->
  	 <action path="/banktransfer" scope="request" type="com.kingstargroup.fdykt.transfer.BankTransferAction">
  	    <forward name="success"  path="/pages/transfer/readschoolcard.jsp"/>
  	    <forward name="failure"  path="/pages/transfer/returninfo.jsp"/>
  	  </action>
  	 <!--刷银行卡 -->
    <action path="/readcardresult" scope="request" type="com.kingstargroup.fdykt.transfer.ReadCardResultAction">
         <forward name="success" path="/pages/transfer/readbankcard.jsp"/>
         <forward name="failure" path="/pages/returninfo.jsp"/>
    </action>
    
   <!--输入金额 -->
   <action path="/checkbankcard"  scope="request" type="com.kingstargroup.fdykt.transfer.CheckBankCardAction" >
      <forward name="transfer" path="/pages/transfer/inputmoney.jsp"/>
      <forward name="bankquery" path="/pages/bankquery/bankpassword.jsp"/>
      <forward name="failure" path="/pages/returninfo.jsp"/>
   </action>

   <!--输入银行卡密码 --> 
   <action path="/transferbankpwd"  scope="request" type="com.kingstargroup.fdykt.transfer.TransferPassWrodAction" >
     <forward name="success" path="/pages/transfer/bankpassword.jsp"/>
   </action>
 
    
    <!--确认转帐 -->
    <action path="/checktransfer" scope="request" type="com.kingstargroup.fdykt.transfer.CheckTransferAction"> 
       <forward  name="success"  path="/pages/transfer/checktransfer.jsp"/>
    </action><!--
    
    <action path="/checkresult"  scope="request" type="com.kingstargroup.fdykt.transfer.CheckResultAction">
         
    </action>
    -->
    <action path="/returninfo" forward="/pages/transfer/returninfo.jsp"/>
   
    <action  path="/bankTransfer" scope="request" type="com.kingstargroup.fdykt.transfer.BankTransferAction"> </action>
    
    <action path="/dealTransfer" name="pwdForm" scope="request"  type="com.kingstargroup.fdykt.transfer.DealTransferAction" validate="false">
       <forward  name="success" path="/pages/transfer/transwritecard.jsp"/>
    </action>
    
   
    <action path="/inputothermoney" forward="/pages/transfer/inputothermoney.jsp"/>
    
    <action path="/writecardfail" scope="request" type="com.kingstargroup.fdykt.transfer.WriteCardFailAction"/>
    
    
    <!--转账查询 -->
    <action  input="/pages/yhkw.jsp" path="/querytransfer" type="com.kingstargroup.fdykt.transfer.QueryTransferAction" >
       <forward name="success" path="/pages/bankquery/traderesult.jsp?page=0" />
       <forward name="failure" path="/pages/yhkw.jsp" />
    </action>
    
   <!--银行余额查询 -->
    <action path="/bankmoney" forward="/pages/bankquery/readbankcard.jsp"/>
    
    <action path="/querybankpwd" forward="/pages/bankquery/bankpassword.jsp"/>
    
    <action path="/bankquerymoney"  name="pwdForm" scope="request" type="com.kingstargroup.fdykt.transfer.BankQueryMoneyAction" validate="false">
       <forward  name="success" path="/pages/bankquery/bankmoney.jsp"/>
       <forward name="failure" path="/pages/returninfo.jsp"/>
    </action>
    
     <!--  城市热点转账业务 -->
     
    <action path="/cityHotspot" type="com.kingstargroup.fdykt.cityhotspot.CityHotspotAction">
     <forward name="success" path="/pages/cityhotspot/cityhotspotputin.jsp"/>
     <forward name="logon" path="/pages/logon.jsp"></forward>
    </action>
    
    <action path="/cityhotspotPutin" type="com.kingstargroup.fdykt.cityhotspot.CityHotspotPutInAction">
     <forward name="success" path="/pages/cityhotspot/cityhotspotcheck.jsp"/>
     <forward name="failure" path="/pages/cityhotspot/cityhotspotfailue.jsp"/>
    </action>
    
    <action path="/cityhotspotCheck" type="com.kingstargroup.fdykt.cityhotspot.CityHotspotCheckAction">
     <forward name="success" path="/pages/cityhotspot/cityhotspotresult.jsp"/>
     </action>
     
     <action path="/cityhotspotTransfer" type="com.kingstargroup.fdykt.cityhotspot.CityHotspotTransferAction">
      <forward name="error" path="/pages/logon.jsp" />
    </action>
     
     <!--更新卡信息 -->
     <action path="/updateCard" type="com.kingstargroup.fdykt.trade.UpdateCardInfoAction">
     	<forward name="success" path="/pages/updateCardInfo.jsp"/>
     </action>
     
     <!--搭伙费清算 -->
     <action path="/feeBalance" type="com.kingstargroup.fdykt.trade.FeeBalanceAction">
     	<forward name="success" path="/pages/feeBalance.jsp"/>
     </action>
     
     
     
   
         
     <!--查询所有的管理机 -->
     <action path="/admin" type="com.kingstargroup.fdykt.trade.AdminAction">
       <forward  name="success" path="/pages/admin.jsp"/>
     </action>
     
     <action path="/adminpagequery" type="com.kingstargroup.fdykt.trade.AdminPageAction">
       <forward  name="success" path="/pages/admin.jsp"/>
     </action> 
     
     <!--监控管理机 -->
     <action  path="/monitor" type="com.kingstargroup.fdykt.trade.MonitorAction">
       
     </action>
     
    <action input="/pages/logon.jsp" path="/logon" scope="request" type="com.kingstargroup.fdykt.logon.LogonAction">
      <forward name="sidylogin" path="/sidylogin.do" />
      <forward name="cityHotspot" path="/cityHotspot.do"/>
      <forward name="failure" path="/pages/logon.jsp" />
      <forward name="cancelloss" path="/cancelloss.do" />
      <forward name="updatepwd" path="/updatepwd.do"/>
      <forward name="updateCard" path="/updateCard.do"/>
      <forward name="feeBalance" path="/feeBalance.do"/>
    </action>
    
    <action input="/pages/userlogon.jsp" path="/userlogon" scope="request" type="com.kingstargroup.fdykt.logon.UserLogonAction">
      <forward name="success" path="/lossquery.do" redirect="false"/>
      <forward name="failure" path="/pages/userlogon.jsp"/>
    </action>
    
    <action input="/pages/jymx.jsp"  path="/querytradeserial" type="com.kingstargroup.fdykt.trade.TradeSerialAction" validate="false">
      <forward name="success" path="/pages/traderesult.jsp?page=0" />
      <forward name="failure" path="/pages/jymx.jsp" />
    </action>
   
   
    <action   path="/queryassistance" type="com.kingstargroup.fdykt.trade.AssistanceSerialAction" validate="false">
      <forward name="success" path="/pages/sidy/assistanceresult.jsp" />
      <forward name="failure" path="/pages/xykw.jsp" />
    </action>
    <!--查询补助分页 -->
     <action   path="/queryassistancepage" type="com.kingstargroup.fdykt.trade.AssistancePageSerialAction" validate="false">
      <forward name="success" path="/pages/sidy/assistanceresult.jsp" />
      <forward name="failure" path="/pages/xykw.jsp" />
    </action>
    
    <action path="/sidylogin" scope="request" type="com.kingstargroup.fdykt.logon.SidyLogonAction">
    	<forward name="success" path="/pages/sidy/getsidyquery.jsp"></forward>
    	<forward name="null" path="/pages/sidy/sidynull.jsp"></forward>
    	<forward name="failure" path="/pages/sidy/sidyerror.jsp"></forward>
    	<forward name="logonerror" path="/pages/logon.jsp"></forward>
    </action>
    
    <!--领取补助分页 -->
    <action path="/sidypagequery" type="com.kingstargroup.fdykt.trade.SidyPageAction">
      <forward name="success" path="/pages/sidy/getsidyquery.jsp" />
      <forward name="failure" path="/pages/xykw.jsp" />
    </action>
    
     <action path="/getSidy" type="com.kingstargroup.fdykt.trade.GetSidyAction">
      <forward name="error" path="/pages/logon.jsp" />
    </action>
    
     <action path="/dealSidyErr" type="com.kingstargroup.fdykt.trade.DealSidyErrorAction">
      <forward name="error" path="/pages/logon.jsp" />
    </action>
    
   <!--   <action path="/sidyList" type="com.kingstargroup.fdykt.trade.SidyListAction">
      <forward name="success" path="/pages/sidy/getsidyresult.jsp" />
      <forward name="failure" path="/pages/xykw.jsp" />
    </action>--> 
    
     <action path="/getSysPara" type="com.kingstargroup.fdykt.trade.GetSysParaAction">
      <forward name="error" path="/pages/logon.jsp" />
    </action>
    
    <action path="/goonGetSidy" scope="request" type="com.kingstargroup.fdykt.trade.GoonGetSidyAction">
    	<forward name="success" path="/pages/sidy/getsidyquery.jsp"></forward>
    	<forward name="null" path="/pages/sidy/sidynull.jsp"></forward>
    	<forward name="failure" path="/pages/sidy/sidyerror.jsp"></forward>
    </action>
    
    <action path="/queryact" type="com.kingstargroup.fdykt.trade.AccountAction">
      <forward name="isnull" path="/pages/accnull.jsp" />
      <forward name="success" path="/pages/accresult.jsp" />
      <forward name="failure" path="/pages/accresult.jsp" />
    </action>
    
    <action input="/pages/updatepwd.jsp" name="customerPwdUpdateForm" path="/editpwd" type="com.kingstargroup.fdykt.trade.CustomerPwdUpdateAction" validate="true">
      <forward name="success" path="/pages/pwdsuc.jsp" />
      <forward name="failure" path="/pages/updatepwd.jsp" />
    </action>
    <action path="/updatepwd" forward="/pages/updatepwd.jsp" />
    
    <action path="/pagequery" type="com.kingstargroup.fdykt.trade.PageAction">
      <forward name="success" path="/pages/traderesult.jsp" />
      <forward name="failure" path="/pages/card_index.jsp" />
    </action>
    
    <action path="/lossquery" type="com.kingstargroup.fdykt.trade.LossQueryAction">
      <forward name="logon" path="/pages/userlogon.jsp" redirect="true"/>
      <forward name="isnull" path="/pages/accnull.jsp" />
      <forward name="success" path="/pages/lossquery.jsp" />
      <forward name="failure" path="/pages/index.jsp" />
    </action>
    
    <!--挂失卡 -->
    <action input="/pages/userlogon.jsp" path="/lossresult" type="com.kingstargroup.fdykt.trade.LossCardAction">
      <forward name="isnull" path="/pages/accnull.jsp" />
      <forward name="success" path="/pages/lossresult.jsp" />
      <forward name="failure" path="/pages/lossquery.jsp" />
    </action>
    
    <action path="/cancelloss" type="com.kingstargroup.fdykt.trade.CancelAction">
      <forward name="isnull" path="/pages/accnull.jsp" />
      <forward name="success" path="/pages/cancelloss.jsp" />
    </action>
    
    <action path="/cancelresult" type="com.kingstargroup.fdykt.trade.CancelLossAction">
      <forward name="success" path="/pages/cancelresult.jsp" />
      <forward name="failure" path="/pages/returninfo.jsp" />
    </action>
    
    <action path="/usrexit" type="com.kingstargroup.fdykt.logon.UsrexitAction">
      <forward name="success" path="/pages/index.jsp" />
    </action>
    <action path="/main" forward="/pages/index.jsp" />
    <action path="/index" forward="/pages/index.jsp" />
    <action path="/tradequery" forward="/pages/tradequery.jsp" />
  
    <action path="/assistancequery" forward="/pages/sidy/assistancequery.jsp" />
    
    <action path="/logsys" type="com.kingstargroup.fdykt.logon.LoginAction">
    	<forward name="loginjsp" path="/pages/logon.jsp" />
    </action>
    
  </action-mappings>
  <message-resources parameter="com.kingstargroup.fdykt.ApplicationResources" />
</struts-config>
