    <property name="src.ecard" value="./src"/>
    <property name="src.counter" value="./counter-src"/>
    <property name="src.documentary" value="./documentary-src"/>
    <property name="src.filters-compression" value="./filters-compression-src"/>
    <property name="src.filters-secure" value="./filters-secure-src"/>
    <property name="src.jdbc" value="./jdbc-src"/>
    <property name="src.lock-ejb" value="./lock-ejb-src"/>
    <property name="src.mail-ejb" value="./mail-ejb-src"/>
    <property name="src.portal-ejb" value="./portal-ejb-src"/>
    <property name="src.struts" value="./struts-src"/>
    <property name="src.util-java" value="./util-java-src"/>
    <property name="src.util-jsf" value="./util-jsf-src"/>
    <property name="src.util-taglib" value="./util-taglib-src"/>
