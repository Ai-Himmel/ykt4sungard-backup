<div class="lfr-dock">
	<h2 class="user-greeting">
		<span>$user_greeting</span>
	</h2>

	<ul class="lfr-dock-list">
		#if ($show_sign_in)
			<li class="sign-in">
				<a href="$sign_in_url">$sign_in_text</a>
			</li>
		#end


		#if ($show_sign_out)
			<li class="sign-out">
				<span>#language ("logon-out-intime-please")</span> <a href="$sign_out_url"> $sign_out_text</a>
			</li>
		#end

	</ul>
</div>