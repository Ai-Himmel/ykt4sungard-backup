<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE pramati-j2ee-server PUBLIC "-//Pramati Technologies //DTD Pramati J2ee Server 5.0//EN" "http://www.pramati.com/dtd/pramati-j2ee-server_5_0.dtd">

<pramati-j2ee-server>
	<vhost-name>default</vhost-name>
	<auto-start>TRUE</auto-start>
	<realm-name>PortalRealm</realm-name>
	<deployment-properties app-versioning="true" delete-previous-versions="false" forced-deployment="false">
		<jsp-files pre-compilation="false" />
		<ejb-files retain-generated-code="false" />
		<validation>
			<app-validation on-prepare="true" on-start="true" />
		</validation>
	</deployment-properties>
	<web-module>
		<name>/</name>
		<module-name>liferay-portal.war</module-name>
		<prefer-deployed-web-classes>false</prefer-deployed-web-classes>
		<resource-mapping>
			<resource-name>jdbc/LiferayPool</resource-name>
			<resource-type>javax.sql.DataSource</resource-type>
			<resource-link>LiferayPool</resource-link>
		</resource-mapping>
		<resource-mapping>
			<resource-name>mail/MailSession</resource-name>
			<resource-type>javax.mail.Session</resource-type>
			<resource-link>mail/MailSession</resource-link>
		</resource-mapping>
	</web-module>
	<role-mapping>
		<module-name>liferay-portal.war</module-name>
		<role-name>users</role-name>
		<role-link>
			<group-principal>everybody</group-principal>
			<user-principal>everybody</user-principal>
		</role-link>
	</role-mapping>
</pramati-j2ee-server>