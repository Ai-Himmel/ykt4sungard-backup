<?xml version="1.0"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<bean id="com.liferay.portlet.messageboards.service.jms.MBMessageQCF" class="org.apache.activemq.pool.PooledConnectionFactory">
		<property name="connectionFactory">
			<bean class="org.apache.activemq.ActiveMQConnectionFactory">
				<property name="brokerURL">
					<value>vm://localhost</value>
				</property>
			</bean>
		</property>
	</bean>
	<bean name="com.liferay.portlet.messageboards.service.jms.MBMessageQueue" class="org.apache.activemq.command.ActiveMQQueue" autowire="constructor">
		<constructor-arg>
			<value>com.liferay.portlet.messageboards.service.jms.MBMessageQueue</value>
		</constructor-arg>
	</bean>
</beans>