<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 4.4.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_4_4_0.dtd">

<service-builder package-path="com.liferay.portlet.workflow">
	<namespace>Workflow</namespace>
	<entity name="WorkflowComponent" local-service="false" remote-service="true" />
	<entity name="WorkflowDefinition" local-service="false" remote-service="true">

		<!-- References -->

		<reference package-path="com.liferay.documentlibrary" entity="DL" />
		<reference package-path="com.liferay.portal" entity="Resource" />
	</entity>
	<entity name="WorkflowInstance" local-service="false" remote-service="true" />
	<entity name="WorkflowTask" local-service="false" remote-service="true" />
</service-builder>