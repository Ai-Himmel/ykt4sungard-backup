<?xml version="1.0"?>
<!DOCTYPE installer PUBLIC "-//tp23 //DTD Ant Installer Config//EN" "http://antinstaller.sf.net/dtd/antinstall-config-0.7.dtd">

<installer
	lookAndFeel="org.tp23.jgoodies.plaf.plastic.PlasticXPLookAndFeel"
	minJavaVersion="1.4"
	name="Liferay Pramati Installer"
	ui="swing,text"
	verbose="false"
>
	<page
		displayText="Installation Options"
		name="properties"
		type="input"
	>
		<directory
			create="true"
			defaultValue="C:\liferay-@lp.version.file.name@\pramati-5.0"
			displayText="Select an installation directory"
			property="app.server.pramati.install.dir"
		/>

		<target
			defaultValue="true"
			displayText="Liferay Pramati"
			target="install"
			force="true"
		/>
	</page>

	<page
		displayText="Progress"
		name="progress"
		type="progress"
		showTargets="true"
	/>
</installer>