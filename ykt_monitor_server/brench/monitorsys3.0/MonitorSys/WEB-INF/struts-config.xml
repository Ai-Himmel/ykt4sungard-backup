<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">

<struts-config>
  <data-sources />
  <form-beans>
     <form-bean name="loginform"  type="org.apache.struts.validator.DynaValidatorForm">
            <form-property name="UserName" type="java.lang.String" />
            <form-property name="PassWord" type="java.lang.String" />
     </form-bean>
  </form-beans>
  <global-exceptions />
  <global-forwards>
    <forward name="gindex" path="/login.jsp" />
  </global-forwards>
  <action-mappings>
  <action parameter="method" path="/AddUserAction" scope="session" type="com.kingstargroup.action.user.AddUserAction"/>
  <action parameter="method" path="/ChangePwdAction" scope="session" type="com.kingstargroup.action.user.ChangePWD"/>
  <action parameter="method" path="/UserManageAction" scope="session" type="com.kingstargroup.action.user.UserManageAction"/>
  <action parameter="method" path="/AddContactAction" scope="session" type="com.kingstargroup.action.systemreffer.AddContactAction"/>
  <action parameter="method" path="/SetReferencesAction" scope="session" type="com.kingstargroup.action.systemreffer.SetReferencesAction"/>
  <action parameter="method" path="/SetAlertlevelAction" scope="session" type="com.kingstargroup.action.systemreffer.SetAlertlevelAction"/>
  <action parameter="method" path="/DistributeDeviceAction" scope="session" type="com.kingstargroup.action.systemreffer.DistributeDeviceAction"/>
  <action parameter="method" path="/CheckAbnormalDeviceHistoyAction" scope="session" type="com.kingstargroup.action.search.CheckAbnormalDeviceHistoyAction"/>
  <action parameter="method" path="/CheckAbnormalTradeAction" scope="session" type="com.kingstargroup.action.search.CheckAbnormalTradeAction"/>
  <action parameter="method" path="/SaveGisInfoAction" scope="session" type="com.kingstargroup.action.systemreffer.SaveGisInfoAction"/>
  <action parameter="method" path="/CheckUnbalanceAction" scope="session" type="com.kingstargroup.action.search.CheckUnbalanceAction"/>
  <action parameter="method" path="/CheckAbnDeviceDiffTypeAction" scope="session" type="com.kingstargroup.action.search.CheckAbnDeviceDiffTypeAction"/>
  <action parameter="method" path="/DeviceAccessAction" scope="session" type="com.kingstargroup.action.device.DeviceAccessAction"/>
  <action parameter="method" path="/CheckStatisticalAction" scope="session" type="com.kingstargroup.action.search.CheckStatisticalAction"/>
  <action parameter="method" path="/CheckSerialLostAction" scope="session" type="com.kingstargroup.action.search.CheckSerialLostAction"/>
  <action parameter="method" path="/ContactManageAction" scope="session" type="com.kingstargroup.action.systemreffer.ContactManageAction"/>
  <action parameter="method" path="/initialDictionary" scope="session" type="com.kingstargroup.action.dictionary.InitialDictionary"/>
  <action parameter="method" path="/CheckServiceExceptionAction" scope="session" type="com.kingstargroup.action.search.CheckServiceExceptionAction"/>
  <action parameter="method" path="/ServerManageAction" scope="session" type="com.kingstargroup.action.search.ServerManageAction"/>
  <action parameter="method" path="/ServiceManageAction" scope="session" type="com.kingstargroup.action.search.ServiceManageAction"/>
  <action parameter="method" path="/getRollErrInfoAction" scope="session" type="com.kingstargroup.action.search.GetRollErrInfoAction"/>
  <action parameter="method" path="/GetDeviceCavousInfoAction" scope="session" type="com.kingstargroup.action.search.GetDeviceCavousInfoAction"/>
  
  <action path="/index" forward="/login.jsp"></action>
  <action path="/login" parameter="method"  scope="request" type="com.kingstargroup.action.login.LoginAction" name="loginform" validate="false">
       <forward name="failure" path="/login.jsp"></forward>
       <forward name="success" path="/pages/devicestatus/status_list.jsp"/>
  </action>
  </action-mappings>
  <message-resources parameter="ApplicationResources" />
  
</struts-config>

