<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN"
        "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">

<struts-config>
    <form-beans>
        <form-bean name="monitorTopoLocationForm" type="org.apache.struts.validator.DynaValidatorForm">
            <form-property name="monitorTopoLocation" type="org.king.topo.domain.MonitorTopoLocation" />
            <form-property name="type" type="java.lang.String"/>
        </form-bean>
        <form-bean name="monitorTopoGroupForm" type="org.apache.struts.validator.DynaValidatorForm">
            <form-property name="monitorTopoGroup" type="org.king.topo.domain.MonitorTopoGroup" />
            <form-property name="type" type="java.lang.String"/>
        </form-bean>
        <form-bean name="monitorDeviceGroupForm" type="org.apache.struts.validator.DynaValidatorForm">
            <form-property name="devicename" type="java.lang.String"/>
            <form-property name="devicegroupname" type="java.lang.String"/>
            <form-property name="locationname" type="java.lang.String"/>
        </form-bean>
    </form-beans>

    <action-mappings>


        <action path="/calcuVML" type="org.king.topo.web.action.TestAction" parameter="method">
        </action>
        <action path="/showvml" type="org.king.topo.web.action.ShowVMLAction" parameter="method">
        	<forward name="success" path="/WEB-INF/pages/vml/monitortopology.jsp"></forward>
        </action>

        <!-- topo校区管理 -->
        <action path="/location" type="org.king.topo.web.action.TopoLocationAction"
                name="monitorTopoLocationForm" parameter="method" validate="false" scope="request">
            <forward name="input" path="/WEB-INF/pages/topo/inputTopoLocation.jsp" redirect="false"/>
            <forward name="list" path="/WEB-INF/pages/topo/listTopoLocation.jsp" redirect="false"/>
            <forward name="view" path="/WEB-INF/pages/topo/viewTopoLocation.jsp" redirect="false"/>
            <forward name="success" path="/location.do?method=listMonitorTopoLocation" redirect="true"/>
        </action>
        <action path="/addLocation" type="org.king.topo.web.action.TopoLocationAction"
                name="monitorTopoLocationForm" parameter="method" validate="true" scope="request" input="/WEB-INF/pages/topo/inputTopoLocation.jsp">
            <forward name="success" path="/location.do?method=listMonitorTopoLocation" redirect="true"/>
        </action>
        <action path="/updateLocation" type="org.king.topo.web.action.TopoLocationAction"
                name="monitorTopoLocationForm" parameter="method" validate="true" scope="request" input="/WEB-INF/pages/topo/inputTopoLocation.jsp">
            <forward name="success" path="/location.do?method=listMonitorTopoLocation" redirect="true"/>
        </action>

        <!-- topo组别管理 -->
        <action path="/group" type="org.king.topo.web.action.TopoGroupAction"
                name="monitorTopoGroupForm" parameter="method" validate="false" scope="request">
            <forward name="input" path="/WEB-INF/pages/topo/inputTopoGroup.jsp" redirect="false"/>
            <forward name="list" path="/WEB-INF/pages/topo/listTopoGroup.jsp" redirect="false"/>
            <forward name="view" path="/WEB-INF/pages/topo/viewTopoGroup.jsp" redirect="false"/>
            <forward name="success" path="/group.do?method=listMonitorTopoGroup" redirect="true"/>
            <forward name="deviceGroup" path="/WEB-INF/pages/topo/selectDevice.jsp" redirect="false"/>
            <forward name="deviceTree" path="/WEB-INF/pages/topo/deviceTree.jsp" redirect="false"/>
        </action>
        <action path="/addGroup" type="org.king.topo.web.action.TopoGroupAction"
                name="monitorTopoGroupForm" parameter="method" validate="true" scope="request" input="/WEB-INF/pages/topo/inputTopoGroup.jsp">
            <forward name="success" path="/group.do?method=listMonitorTopoGroup" redirect="true"/>
        </action>
        <action path="/updateGroup" type="org.king.topo.web.action.TopoGroupAction"
                name="monitorTopoGroupForm" parameter="method" validate="true" scope="request" input="/WEB-INF/pages/topo/inputTopoGroup.jsp">
            <forward name="success" path="/group.do?method=listMonitorTopoGroup" redirect="true"/>
        </action>

        <!-- 设备分组查询 -->
        <action path="/deviceGroup" type="org.king.topo.web.action.DeviceGroupAction"
                name="monitorDeviceGroupForm" parameter="method" validate="true" scope="request" input="/WEB-INF/pages/topo/inputTopoGroup.jsp">
            <forward name="list" path="/WEB-INF/pages/topo/listDeviceGroup.jsp" redirect="false"/>
        </action>
    </action-mappings>
</struts-config>
