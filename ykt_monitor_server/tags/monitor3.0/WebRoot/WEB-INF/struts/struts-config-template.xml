<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN"
        "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">

<struts-config>
    <form-beans>
        <form-bean name="monitorHostTemplateForm" type="org.apache.struts.validator.DynaValidatorForm">
            <form-property name="monitorHostTemplate" type="org.king.template.domain.MonitorHostTemplate" />
            <form-property name="type" type="java.lang.String"/>
        </form-bean>
        <form-bean name="monitorServiceTemplateForm" type="org.apache.struts.validator.DynaValidatorForm">
            <form-property name="monitorServiceTemplate" type="org.king.template.domain.MonitorServiceTemplate" />
            <form-property name="type" type="java.lang.String"/>
        </form-bean>
        <form-bean name="monitorContactTemplateForm" type="org.apache.struts.validator.DynaValidatorForm">
            <form-property name="monitorContactTemplate" type="org.king.template.domain.MonitorContactTemplate" />
            <form-property name="type" type="java.lang.String"/>
        </form-bean>
        <form-bean name="monitorTimePeriodsForm" type="org.apache.struts.validator.DynaValidatorForm">
            <form-property name="monitorTimePeriods" type="org.king.template.domain.MonitorTimePeriods" />
            <form-property name="timerangers" type="org.king.template.util.TimerangerList"/>
            <form-property name="type" type="java.lang.String"/>
        </form-bean>
        <form-bean name="monitorTermdevTemplateForm" type="org.apache.struts.validator.DynaValidatorForm">
            <form-property name="monitorTermdevTemplate" type="org.king.template.domain.MonitorTermdevTemplate" />
            <form-property name="type" type="java.lang.String"/>
        </form-bean>
    </form-beans>

    <action-mappings>
        <!-- 主机模板管理 -->
        <action path="/hostTemplate" type="org.king.template.web.action.HostTemplateAction"
                name="monitorHostTemplateForm" parameter="method" validate="false" scope="request">
            <forward name="input" path="/WEB-INF/pages/template/inputHostTemplate.jsp" redirect="false"/>
            <forward name="list" path="/WEB-INF/pages/template/listHostTemplate.jsp" redirect="false"/>
            <forward name="view" path="/WEB-INF/pages/template/viewHostTemplate.jsp" redirect="false"/>
            <forward name="success" path="/hostTemplate.do?method=listMonitorHostTemplate" redirect="true"/>
        </action>
        <action path="/addHostTemplate" type="org.king.template.web.action.HostTemplateAction"
                name="monitorHostTemplateForm" parameter="method" validate="true" scope="request" input="/WEB-INF/pages/template/inputHostTemplate.jsp">
            <forward name="success" path="/hostTemplate.do?method=listMonitorHostTemplate" redirect="true"/>
        </action>
        <action path="/updateHostTemplate" type="org.king.template.web.action.HostTemplateAction"
                name="monitorHostTemplateForm" parameter="method" validate="true" scope="request" input="/WEB-INF/pages/template/inputHostTemplate.jsp">
            <forward name="success" path="/hostTemplate.do?method=listMonitorHostTemplate" redirect="true"/>
        </action>

        <!-- 服务模板管理 -->
        <action path="/serviceTemplate" type="org.king.template.web.action.ServiceTemplateAction"
                name="monitorServiceTemplateForm" parameter="method" validate="false" scope="request">
            <forward name="input" path="/WEB-INF/pages/template/inputServiceTemplate.jsp" redirect="false"/>
            <forward name="list" path="/WEB-INF/pages/template/listServiceTemplate.jsp" redirect="false"/>
            <forward name="view" path="/WEB-INF/pages/template/viewServiceTemplate.jsp" redirect="false"/>
            <forward name="success" path="/serviceTemplate.do?method=listMonitorServiceTemplate" redirect="true"/>
        </action>
        <action path="/addServiceTemplate" type="org.king.template.web.action.ServiceTemplateAction"
                name="monitorServiceTemplateForm" parameter="method" validate="true" scope="request" input="/WEB-INF/pages/template/inputServiceTemplate.jsp">
            <forward name="success" path="/serviceTemplate.do?method=listMonitorServiceTemplate" redirect="true"/>
        </action>
        <action path="/updateServiceTemplate" type="org.king.template.web.action.ServiceTemplateAction"
                name="monitorServiceTemplateForm" parameter="method" validate="true" scope="request" input="/WEB-INF/pages/template/inputServiceTemplate.jsp">
            <forward name="success" path="/serviceTemplate.do?method=listMonitorServiceTemplate" redirect="true"/>
        </action>

        <!-- 联系人模板管理 -->
        <action path="/contactTemplate" type="org.king.template.web.action.ContactTemplateAction"
                name="monitorContactTemplateForm" parameter="method" validate="false" scope="request">
            <forward name="input" path="/WEB-INF/pages/template/inputContactTemplate.jsp" redirect="false"/>
            <forward name="list" path="/WEB-INF/pages/template/listContactTemplate.jsp" redirect="false"/>
            <forward name="view" path="/WEB-INF/pages/template/viewContactTemplate.jsp" redirect="false"/>
            <forward name="success" path="/contactTemplate.do?method=listMonitorContactTemplate" redirect="true"/>
        </action>

        <!-- 时间域模板管理 -->
        <action path="/timePeriods" type="org.king.template.web.action.TimePeriodsAction"
                name="monitorTimePeriodsForm" parameter="method" validate="false" scope="request">
            <forward name="input" path="/WEB-INF/pages/template/inputTimePeriods.jsp" redirect="false"/>
            <forward name="list" path="/WEB-INF/pages/template/listTimePeriods.jsp" redirect="false"/>
            <forward name="view" path="/WEB-INF/pages/template/viewTimePeriods.jsp" redirect="false"/>
            <forward name="success" path="/timePeriods.do?method=listMonitorTimePeriods" redirect="true"/>
        </action>

        <!-- 监控配置模板管理 -->
        <action path="/termdevTemplate" type="org.king.template.web.action.TermdevTemplateAction"
                name="monitorTermdevTemplateForm" parameter="method" validate="false" scope="request">
            <forward name="input" path="/WEB-INF/pages/template/inputTermdevTemplate.jsp" redirect="false"/>
            <forward name="list" path="/WEB-INF/pages/template/listTermdevTemplate.jsp" redirect="false"/>
            <forward name="view" path="/WEB-INF/pages/template/viewTermdevTemplate.jsp" redirect="false"/>
            <forward name="devtem" path="/WEB-INF/pages/template/selectDevice.jsp" redirect="false"/>
            <forward name="deviceTree" path="/WEB-INF/pages/template/deviceTree.jsp" redirect="false"/>
            <forward name="success" path="/termdevTemplate.do?method=listMonitorTermdevTemplate" redirect="true"/>
        </action>
        <action path="/addTermdevTemplate" type="org.king.template.web.action.TermdevTemplateAction"
                name="monitorTermdevTemplateForm" parameter="method" validate="true" scope="request" input="/WEB-INF/pages/template/inputTermdevTemplate.jsp">
            <forward name="success" path="/termdevTemplate.do?method=listMonitorTermdevTemplate" redirect="true"/>
        </action>
        <action path="/updateTermdevTemplate" type="org.king.template.web.action.TermdevTemplateAction"
                name="monitorTermdevTemplateForm" parameter="method" validate="true" scope="request" input="/WEB-INF/pages/template/inputTermdevTemplate.jsp">
            <forward name="success" path="/termdevTemplate.do?method=listMonitorTermdevTemplate" redirect="true"/>
        </action>

    </action-mappings>
</struts-config>
