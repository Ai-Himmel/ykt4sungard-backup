<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN"
        "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">

<struts-config>
    <form-beans>
        <form-bean name="monitorHostStatusForm" type="org.apache.struts.validator.DynaValidatorForm">
            <form-property name="monitorHostStatus" type="org.king.host.domain.MonitorHostStatus" />
            <form-property name="displayName" type="java.lang.String"/>
            <form-property name="hostAddress" type="java.lang.String"/>
            <form-property name="currentState" type="java.lang.String"/>
            <form-property name="hostgroupId" type="java.lang.String"/>
        </form-bean>
        <form-bean name="monitorServiceStatusForm" type="org.apache.struts.validator.DynaValidatorForm">
            <form-property name="monitorServiceStatus" type="org.king.hostservice.domain.MonitorServiceStatus" />
            <form-property name="displayName" type="java.lang.String"/>
            <form-property name="serviceName" type="java.lang.String"/>
            <form-property name="currentState" type="java.lang.String"/>
        </form-bean>
        <form-bean name="monitorTermdeviceStatusForm" type="org.apache.struts.validator.DynaValidatorForm">
            <form-property name="monitorTermdeviceStatus" type="org.king.termdev.domain.MonitorTermdeviceStatus" />
            <form-property name="devicename" type="java.lang.String"/>
            <form-property name="fdevicename" type="java.lang.String"/>
            <form-property name="currentState" type="java.lang.String"/>
            <form-property name="templateId" type="java.lang.String"/>
            <form-property name="devtypecode" type="java.lang.String"/>
            <form-property name="fdeviceid" type="java.lang.String"/>
            <form-property name="deviceid" type="java.lang.String"/>
            <form-property name="isLeaf" type="java.lang.String"/>
        </form-bean>
        <form-bean name="monitorTermdevserviceStatusForm" type="org.apache.struts.validator.DynaValidatorForm">
            <form-property name="monitorTermdevserviceStatus" type="org.king.termdev.domain.MonitorTermdevserviceStatus" />
        </form-bean>
        <form-bean name="monitorHostHistoryStatusForm" type="org.apache.struts.validator.DynaValidatorForm">
            <form-property name="displayName" type="java.lang.String"/>
            <form-property name="hostAddress" type="java.lang.String"/>
            <form-property name="timePeriodId" type="java.lang.String"/>
            <form-property name="state" type="java.lang.String"/>
            <form-property name="hostId" type="java.lang.String"/>
            <form-property name="hostgroupId" type="java.lang.String"/>
        </form-bean>
        <form-bean name="monitorServiceHistoryStatusForm" type="org.apache.struts.validator.DynaValidatorForm">
            <form-property name="displayName" type="java.lang.String"/>
            <form-property name="serviceName" type="java.lang.String"/>
            <form-property name="timePeriodId" type="java.lang.String"/>
            <form-property name="state" type="java.lang.String"/>
            <form-property name="serviceId" type="java.lang.String"/>
        </form-bean>
        <form-bean name="monitorTermdeviceHistoryStatusForm" type="org.apache.struts.validator.DynaValidatorForm">
            <form-property name="timePeriodId" type="java.lang.String"/>
            <form-property name="state" type="java.lang.String"/>
            <form-property name="devicename" type="java.lang.String"/>
            <form-property name="fdevicename" type="java.lang.String"/>
            <form-property name="deviceId" type="java.lang.String"/>
            <form-property name="templateId" type="java.lang.String"/>
        </form-bean>
    </form-beans>

    <action-mappings>
        <!-- 主机状态统计 -->
        <action path="/hostStatus" type="org.king.status.web.action.HostStatusAction"
                name="monitorHostStatusForm" parameter="method" validate="false" scope="request">
            <forward name="listHostStatus" path="/WEB-INF/pages/status/listHostStatus.jsp" redirect="false"/>
            <forward name="viewHostStatus" path="/WEB-INF/pages/status/viewHostStatus.jsp" redirect="false"/>
        </action>
        <!-- 服务状态统计 -->
        <action path="/serviceStatus" type="org.king.status.web.action.ServiceStatusAction"
                name="monitorServiceStatusForm" parameter="method" validate="false" scope="request">
            <forward name="listServiceStatus" path="/WEB-INF/pages/status/listServiceStatus.jsp" redirect="false"/>
            <forward name="viewServiceStatus" path="/WEB-INF/pages/status/viewServiceStatus.jsp" redirect="false"/>
        </action>
        <!-- 设备状态统计 -->
        <action path="/termdeviceStatus" type="org.king.status.web.action.TermdeviceStatusAction"
                name="monitorTermdeviceStatusForm" parameter="method" validate="false" scope="request">
            <forward name="listTermdeviceStatus" path="/WEB-INF/pages/status/listTermdeviceStatus.jsp" redirect="false"/>
            <forward name="viewTermdeviceStatus" path="/WEB-INF/pages/status/viewTermdeviceStatus.jsp" redirect="false"/>
            <forward name="caculateTermdeviceStatus" path="/WEB-INF/pages/status/caculateTermdeviceStatus.jsp" redirect="false"/>
        </action>
        <!-- 设备服务状态统计 -->
        <action path="/termdevserviceStatus" type="org.king.status.web.action.TermdevserviceStatusAction"
                name="monitorTermdevserviceStatusForm" parameter="method" validate="false" scope="request">
            <forward name="listTermdevserviceStatus" path="/WEB-INF/pages/status/listTermdevserviceStatus.jsp" redirect="false"/>
            <forward name="viewTermdevserviceStatus" path="/WEB-INF/pages/status/viewTermdevserviceStatus.jsp" redirect="false"/>
        </action>
        <!-- 总体状态统计 -->
        <action path="/globalStatus" type="org.king.status.web.action.GlobalStatusAction"
                 parameter="method">
            <forward name="listGlobalStatus" path="/WEB-INF/pages/status/listGlobalStatus.jsp" redirect="false"/>
        </action>
        <!-- 下拉菜单选择 -->
        <action path="/select" type="org.king.status.web.action.SelectAction"
                 parameter="method">
        </action>
        <!-- 主机历史状态 -->
        <action path="/hostHistoryStatus" type="org.king.status.web.action.HostHistoryStatusAction"
                 name="monitorHostHistoryStatusForm" parameter="method" validate="false" scope="request">
            <forward name="success" path="/WEB-INF/pages/status/listHostHistoryStatus.jsp" redirect="false"/>
            <forward name="view" path="/WEB-INF/pages/status/viewHostHistoryStatus.jsp" redirect="false"/>
            <forward name="chart" path="/WEB-INF/pages/status/viewHostStatusChart.jsp" redirect="false"/>
        </action>
        <!-- 服务历史状态 -->
        <action path="/serviceHistoryStatus" type="org.king.status.web.action.ServiceHistoryStatusAction"
                 name="monitorServiceHistoryStatusForm" parameter="method" validate="false" scope="request">
            <forward name="success" path="/WEB-INF/pages/status/listServiceHistoryStatus.jsp" redirect="false"/>
            <forward name="view" path="/WEB-INF/pages/status/viewServiceHistoryStatus.jsp" redirect="false"/>
            <forward name="chart" path="/WEB-INF/pages/status/viewServiceStatusChart.jsp" redirect="false"/>
        </action>
        <!-- 终端设备历史状态 -->
        <action path="/termdeviceHistoryStatus" type="org.king.status.web.action.TermdeviceHistoryStatusAction"
                 name="monitorTermdeviceHistoryStatusForm" parameter="method" validate="false" scope="request">
            <forward name="success" path="/WEB-INF/pages/status/listTermdeviceHistoryStatus.jsp" redirect="false"/>
            <forward name="view" path="/WEB-INF/pages/status/viewTermdeviceHistoryStatus.jsp" redirect="false"/>
            <forward name="chart" path="/WEB-INF/pages/status/viewTermdeviceStatusChart.jsp" redirect="false"/>
        </action>
        <!-- 终端设备服务历史状态 -->
        <action path="/termdevserviceHistoryStatus" type="org.king.status.web.action.TermdevserviceHistoryStatusAction"
                 parameter="method">
            <forward name="success" path="/WEB-INF/pages/status/listTermdevserviceHistoryStatus.jsp" redirect="false"/>
        </action>
        <!-- 显示图片 -->
        <action path="/displayChart" type="org.king.status.web.action.DisplayChartAction"
                 parameter="method">
        </action>
    </action-mappings>
</struts-config>
