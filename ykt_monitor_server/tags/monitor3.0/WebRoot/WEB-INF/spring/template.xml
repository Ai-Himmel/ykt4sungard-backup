<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
    <!-- **************************DAO SETTING *********************************-->
	<bean id="monitorContactTemplateDAO" class="org.king.template.dao.hibernate.MonitorContactTemplateDAOHibernate">
		<property name="baseDAO">
			<ref bean="baseDAO" />
		</property>
	</bean>
	<bean id="monitorHostTemplateDAO" class="org.king.template.dao.hibernate.MonitorHostTemplateDAOHibernate">
		<property name="baseDAO">
			<ref bean="baseDAO" />
		</property>
	</bean>
	<bean id="monitorServiceTemplateDAO" class="org.king.template.dao.hibernate.MonitorServiceTemplateDAOHibernate">
		<property name="baseDAO">
			<ref bean="baseDAO" />
		</property>
	</bean>
	<bean id="monitorTimePeriodsDAO" class="org.king.template.dao.hibernate.MonitorTimePeriodsDAOHibernate">
		<property name="baseDAO">
			<ref bean="baseDAO" />
		</property>
	</bean>
	<bean id="monitorTimerangerDAO" class="org.king.template.dao.hibernate.MonitorTimerangerDAOHibernate">
		<property name="baseDAO">
			<ref bean="baseDAO" />
		</property>
	</bean>
    <bean id="monitorTermdevTemplateDAO" class="org.king.template.dao.hibernate.MonitorTermdevTemplateDAOHibernate">
		<property name="baseDAO">
			<ref bean="baseDAO" />
		</property>
	</bean>

    <!-- ************************** SERVICE SETTING *****************************-->
    <bean id="templateService" class="org.springframework.aop.framework.ProxyFactoryBean">   
    <property name="proxyInterfaces">   
        <value>org.king.template.service.TemplateService</value>   
    </property>   
    <property name="target">   
            <ref local="templateServiceTarget"/>   
    </property>   
    <property name="interceptorNames">   
            <list>   
             	<value>templateServiceInterceptorAdvice</value>   
            	<value>templateServicetransactionAdvisor</value>   
            </list>   
    </property>   
    </bean>  
    
      <bean id="templateServiceTarget" class="org.king.template.service.impl.TemplateServiceImpl" autowire="byName">
   		 <property name="monitorContactTemplateDAO">
              <ref local="monitorContactTemplateDAO"/>
          </property>
          <property name="monitorHostTemplateDAO">
              <ref local="monitorHostTemplateDAO"/>
          </property>
          <property name="monitorServiceTemplateDAO">
              <ref local="monitorServiceTemplateDAO"/>
          </property>
          <property name="monitorTermdevTemplateDAO">
              <ref local="monitorTermdevTemplateDAO"/>
          </property>
          <property name="monitorTimePeriodsDAO">
              <ref local="monitorTimePeriodsDAO"/>
          </property>
      </bean>   
    <bean id="templateServiceInterceptorAdvice" class="org.springframework.aop.support.RegexpMethodPointcutAdvisor">   
	    <property name="advice">   
	            <ref local="templateServiceAfterAdvice"/>   
	    </property>   
	    <property name="patterns">
	    	<value>.*TemplateService*\.save.*,.*TemplateService*\.update.*,.*TemplateService*\.delete.*</value>
	    </property>   
    </bean>   
    <bean id="templateServiceAfterAdvice" class="org.king.template.interceptor.TemplateServiceAfterAdvice">
    	<property name="monitorSupportService">
    		<ref bean="monitorSupportService"/>
    	</property>
    </bean>
    
    <bean id="templateServicetransactionAdvisor" class="org.springframework.transaction.interceptor.TransactionInterceptor">        
      <property name="transactionManager">
			<ref bean="transactionManager"/>
		</property>
      	<property name="transactionAttributes">
			<props>
				<prop key="save*">PROPAGATION_REQUIRED</prop>
				<prop key="update*">PROPAGATION_REQUIRED</prop>
				<prop key="delete*">PROPAGATION_REQUIRED</prop>
				<prop key="*">PROPAGATION_REQUIRED,readOnly</prop>
			</props>
		</property> 
   </bean> 
