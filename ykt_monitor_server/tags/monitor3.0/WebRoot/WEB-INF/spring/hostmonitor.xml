	<bean id="monitorHostJob" class="org.king.monitor.MonitorHostJob">
		<property name="monitorHostService">
			<ref local="monitorHostService"/>
		</property>
		<property name="monitorSupportService">
			<ref bean="monitorSupportService"/>
		</property>
	</bean>
