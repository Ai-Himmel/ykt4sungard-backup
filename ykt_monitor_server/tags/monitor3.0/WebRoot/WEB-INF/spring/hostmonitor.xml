<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<bean id="monitorHostDAO" class="org.king.host.dao.hibernate.MonitorHostDAOHibernate">
		<property name="baseDAO">
			<ref bean="baseDAO" />
		</property>
	</bean>
	<bean id="monitorHostchecksDAO" class="org.king.host.dao.hibernate.MonitorHostchecksDAOHibernate">
		<property name="baseDAO">
			<ref bean="baseDAO" />
		</property>
	</bean>
	<bean id="monitorHostcommentsDAO" class="org.king.host.dao.hibernate.MonitorHostcommentsDAOHibernate">
		<property name="baseDAO">
			<ref bean="baseDAO" />
		</property>
	</bean>
	<bean id="mnitorHostgroupMembersDAO" class="org.king.host.dao.hibernate.MonitorHostgroupMembersDAOHibernate">
		<property name="baseDAO">
			<ref bean="baseDAO" />
		</property>
	</bean>
	<bean id="monitorHostgroupsDAO" class="org.king.host.dao.hibernate.MonitorHostgroupsDAOHibernate">
		<property name="baseDAO">
			<ref bean="baseDAO" />
		</property>
	</bean>
	<bean id="monitorHostscheduleddowntimeDAO" class="org.king.host.dao.hibernate.MonitorHostscheduleddowntimeDAOHibernate">
		<property name="baseDAO">
			<ref bean="baseDAO" />
		</property>
	</bean>
	<bean id="monitorHostStatusDAO" class="org.king.host.dao.hibernate.MonitorHostStatusDAOHibernate">
		<property name="baseDAO">
			<ref bean="baseDAO" />
		</property>
	</bean>
	
	
	<bean id="monitorHostService" class="org.springframework.aop.framework.ProxyFactoryBean">   
    <property name="proxyInterfaces">   
        <value>org.king.host.service.MonitorHostService</value>   
    </property>   
    <property name="target">   
            <ref local="monitorHostServiceTarget"/>   
    </property>   
    <property name="interceptorNames">   
            <list>   
             	<value>monitorHostServiceInterceptorAdvice</value>   
            	<value>monitorHostServicetransactionAdvisor</value>   
            </list>   
    </property>   
    </bean>  
    
      <bean id="monitorHostServiceTarget" class="org.king.host.service.impl.MonitorHostServiceImpl" autowire="byName">
     		<property name="monitorHostDAO">
				<ref local="monitorHostDAO"/>
			</property>
			<property name="monitorHostStatusDAO">
				<ref local="monitorHostStatusDAO"/>
			</property>
             <property name="monitorHostgroupsDAO">
                <ref local="monitorHostgroupsDAO"/>
          	</property>
          	<property name="monitorHostchecksDAO">
          		<ref local="monitorHostchecksDAO"/>
          	</property>
      </bean>   
    <bean id="monitorHostServiceInterceptorAdvice" class="org.springframework.aop.support.RegexpMethodPointcutAdvisor">   
	    <property name="advice">   
	            <ref local="monitorHostServiceAfterAdvice"/>   
	    </property>   
	    <property name="patterns">
	    	<value>.*MonitorHostService*\.save.*,.*MonitorHostService*\.update.*,.*MonitorHostService*\.delete.*</value>
	    </property>   
    </bean>   
    <bean id="monitorHostServiceAfterAdvice" class="org.king.host.interceptor.MonitorHostServiceAfterAdvice">
    	<property name="monitorSupportService">
    		<ref bean="monitorSupportService"/>
    	</property>
    </bean>
    
    <bean id="monitorHostServicetransactionAdvisor" class="org.springframework.transaction.interceptor.TransactionInterceptor">        
      <property name="transactionManager">
			<ref bean="transactionManager"/>
		</property>
      	<property name="transactionAttributes">
			<props>
				<prop key="save*">PROPAGATION_REQUIRED</prop>
				<prop key="update*">PROPAGATION_REQUIRED</prop>
				<prop key="delete*">PROPAGATION_REQUIRED</prop>
				<prop key="*">PROPAGATION_REQUIRED,readOnly</prop>
			</props>
		</property> 
   </bean> 
	
