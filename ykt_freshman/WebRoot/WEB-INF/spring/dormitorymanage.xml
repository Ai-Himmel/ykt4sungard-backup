<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<!-- ************************** DAO SETTING *********************************-->
	<!-- DAO object: Hibernate implementation -->

	<bean id="feemodelDAO" class="org.king.dormitorymanage.dao.hibernate.FeemodelDAOHibernate">
	<property name="baseDAO">
			<ref bean="baseDAO" />
		</property>
	</bean>
	<bean id="dormitorymodelDAO" class="org.king.dormitorymanage.dao.hibernate.DormitorymodelDAOHibernate">
		<property name="baseDAO">
			<ref bean="baseDAO" />
		</property>
	</bean>
	<bean id="dormAlerthisDAO" class="org.king.dormitorymanage.dao.hibernate.DormAlerthisDAOHibernate">
		<property name="baseDAO">
			<ref bean="baseDAO" />
		</property>
	</bean>

	<!-- ************************** SERVICE SETTING *****************************-->
	<!-- ***** security SERVICE *****-->
<bean id="dormitoryService" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="transactionManager">
			<ref bean="transactionManager" />
		</property>
		<property name="target">
			<bean class="org.king.dormitorymanage.service.impl.DormitoryServiceImpl">
				<property name="dormitorymodelDAO">
					<ref local="dormitorymodelDAO" />
				</property>
				<property name="studentmodelDAO">
					<ref bean="studentmodelDAO"/>
				</property>
				<property name="classmodelDAO">
					<ref bean="classmodelDAO"/>
				</property>
				<property name="dormAlerthisDAO">
					<ref local="dormAlerthisDAO"/>
				</property>
				<property name="collegemodelDAO">
					<ref bean="collegemodelDAO"/>
				</property>
				<property name="managermodelDAO">
					<ref bean="managermodelDAO"/>
				</property>
				<property name="distributionTempDAO">
					<ref bean="distributionTempDAO"/>
				</property>
				
				<property name="baseDAO">
					<ref bean="baseDAO"/>
				</property>
				<property name="yxGraduateDAO">
					<ref bean="yxGraduateDAO"/>
				</property>
				<property name="jdbcTemplate">
					<ref bean="jdbcTemplate"/>
				</property>
			</bean>
		</property>
		<property name="transactionAttributes">
			<props>
				<prop key="add*">PROPAGATION_REQUIRED,-LocationNotExistException,-DormitoryNotExistException,-GenderNotExistException,-StudentAlreadyInDormException</prop>
				<prop key="save*">PROPAGATION_REQUIRED,-DormitoryNotEnoughException</prop>
				<prop key="find*">PROPAGATION_REQUIRED,readOnly,-BusinessException</prop>
				<prop key="*">PROPAGATION_REQUIRED,readOnly</prop>
				<prop key="remove*">PROPAGATION_REQUIRED,-BusinessException</prop>
				<prop key="delete*">PROPAGATION_REQUIRED,-DormitoryHasStuException</prop>
				<prop key="update*">PROPAGATION_REQUIRED,-BusinessException,-DormitoryHasStuException,-AccomodationNotRightException,-DormitoryHasnotbindedException</prop>
				<prop key="withdrawDis">PROPAGATION_REQUIRED,-BusinessException</prop>
			</props>
		</property>
</bean>
</beans>
