<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<!-- ************************** DAO SETTING *********************************-->
	<!-- DAO object: Hibernate implementation -->

	<!-- ************************** SERVICE SETTING *****************************-->
	<!-- ***** security SERVICE *****-->
<bean id="dictionaryService" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="transactionManager">
			<ref bean="transactionManager" />
		</property>
		<property name="target">
 			<bean class="org.king.dictionary.service.impl.DictionaryServiceImpl">				
				 <property name="baseDAO">
					<ref bean="baseDAO"/>	
 				</property>
			</bean>
		</property>
		<property name="transactionAttributes">
			<props>
				<prop key="add*">PROPAGATION_REQUIRED,-LocationNotExistException,-DormitoryNotExistException,-GenderNotExistException,-StudentAlreadyInDormException</prop>
				<prop key="save*">PROPAGATION_REQUIRED,-DormitoryNotEnoughException</prop>
				<prop key="find*">PROPAGATION_REQUIRED,readOnly,-BusinessException</prop>
				<prop key="*">PROPAGATION_REQUIRED,readOnly</prop>
				<prop key="remove*">PROPAGATION_REQUIRED,-BusinessException</prop>
				<prop key="delete*">PROPAGATION_REQUIRED,-DormitoryHasStuException</prop>
				<prop key="update*">PROPAGATION_REQUIRED,-BusinessException,-DormitoryHasStuException,-AccomodationNotRightException,-DormitoryHasnotbindedException</prop>
				<prop key="withdrawDis">PROPAGATION_REQUIRED,-BusinessException</prop>
			</props>
		</property>
</bean>
