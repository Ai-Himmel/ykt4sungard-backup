<bean id="dormAppService" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="transactionManager">
			<ref bean="transactionManager" />
		</property>
		<property name="target">
 			<bean class="org.king.yangong.dormitorymanage.service.impl.DormAppServiceImpl">				
				 <property name="baseDAO">
					<ref bean="baseDAO"/>	
 				</property>
 				<property name="allDAO">
					<ref bean="allDAO"/>	
 				</property>
 				<property name="dictionaryService">
					<ref local="dictionaryService"/>	
 				</property>
 				<property name="yxGraduateService">
					<ref bean="yxGraduateService"/>	
 				</property>
			</bean>
		</property>
		<property name="transactionAttributes">
			<props>
