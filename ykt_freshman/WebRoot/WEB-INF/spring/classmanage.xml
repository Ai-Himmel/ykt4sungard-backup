<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<!-- ************************** DAO SETTING *********************************-->
	<!-- DAO object: Hibernate implementation -->
	<bean id="collegemodelDAO" class="org.king.classmanage.dao.hibernate.CollegemodelDAOHibernate">
		<property name="baseDAO">
			<ref bean="baseDAO" />
		</property>
	</bean>
	<bean id="classmodelDAO" class="org.king.classmanage.dao.hibernate.ClassmodelDAOHibernate">
		<property name="baseDAO">
			<ref bean="baseDAO" />
		</property>
	</bean>
	<bean id="studentmodelDAO" class="org.king.classmanage.dao.hibernate.StudentmodelDAOHibernate">
		<property name="baseDAO">
			<ref bean="baseDAO" />
		</property>
	</bean>
	<bean id="managermodelDAO" class="org.king.classmanage.dao.hibernate.ManagermodelDAOHibernate">
		<property name="baseDAO">
			<ref bean="baseDAO" />
		</property>
	</bean>	
	<bean id="dictionaryDAO" class="org.king.classmanage.dao.hibernate.DictionaryDAOHibernate">
		<property name="baseDAO">
			<ref bean="baseDAO" />
		</property>
	</bean>
	
	<bean id="distributionTempDAO" class="org.king.classmanage.dao.hibernate.DistributionTempDAOHibernate">
		<property name="baseDAO">
			<ref bean="baseDAO" />
		</property>
	</bean>
	
	<bean id="departmentDAO" class="org.king.classmanage.dao.hibernate.DepartmentDAOHibernate">
		<property name="baseDAO">
			<ref bean="baseDAO" />
		</property>
	</bean>
	<bean id="stuAdddelhisDAO" class="org.king.classmanage.dao.hibernate.StuAdddelhisDAOHibernate">
		<property name="baseDAO">
			<ref bean="baseDAO" />
		</property>
	</bean>	
	
	<bean id="dormitorymodelDAO" class="org.king.dormitorymanage.dao.hibernate.DormitorymodelDAOHibernate">
		<property name="baseDAO">
			<ref bean="baseDAO" />
		</property>
	</bean>
	
	<bean id="yxGraduateDAO" class="org.king.yangong.dormitorymanage.dao.hibernate.YxGraduateDAOHibernate">
		<property name="baseDAO">
			<ref bean="baseDAO" />
		</property>
	</bean>
	
	<!-- ************************** SERVICE SETTING *****************************-->
	<!-- ***** class manage module *****-->
	<bean id="collegeService" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="transactionManager">
			<ref bean="transactionManager" />
		</property>
		<property name="target">
			<bean class="org.king.classmanage.service.impl.CollegeServiceImpl">
				<property name="collegemodelDAO">
					<ref local="collegemodelDAO" />
				</property>
				<property name="managermodelDAO">
					<ref local="managermodelDAO" />
				</property>
			</bean>
		</property>
		<property name="transactionAttributes">
			<props>
				<prop key="remove*">PROPAGATION_REQUIRED</prop>
				<prop key="get*">PROPAGATION_REQUIRED,readOnly</prop>
				<prop key="update*">PROPAGATION_REQUIRED</prop>
				<prop key="save*">PROPAGATION_REQUIRED</prop>
				<prop key="delete*">PROPAGATION_REQUIRED</prop>
				<prop key="*">PROPAGATION_REQUIRED,readOnly</prop>
			</props>
		</property>
	</bean>

	<bean id="classService" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="transactionManager">
			<ref bean="transactionManager" />
		</property>
		<property name="target">
			<bean class="org.king.classmanage.service.impl.ClassServiceImpl">
				<property name="classmodelDAO">
					<ref local="classmodelDAO" />
				</property>
				<property name="managermodelDAO">
					<ref local="managermodelDAO" />
				</property>
				<property name="studentmodelDAO">
					<ref bean="studentmodelDAO" />
				</property>
				<property name="collegemodelDAO">
					<ref bean="collegemodelDAO" />
				</property>
				<property name="dormitorymodelDAO">
					<ref local="dormitorymodelDAO" />
				</property>
				<property name="yxGraduateDAO">
					<ref local="yxGraduateDAO" />
				</property>
			</bean>
		</property>
		<property name="transactionAttributes">
			<props>
				<prop key="remove*">PROPAGATION_REQUIRED</prop>
				<prop key="get*">PROPAGATION_REQUIRED,readOnly</prop>
				<prop key="update*">PROPAGATION_REQUIRED</prop>
				<prop key="save*">PROPAGATION_REQUIRED</prop>
				<prop key="delete*">PROPAGATION_REQUIRED</prop>
				<prop key="init*">PROPAGATION_REQUIRED</prop>				
				<prop key="*">PROPAGATION_REQUIRED,readOnly</prop>
			</props>
		</property>
	</bean>

	<bean id="managerService" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="transactionManager">
			<ref bean="transactionManager" />
		</property>
		<property name="target">
			<bean class="org.king.classmanage.service.impl.ManagerServiceImpl">
				<property name="managermodelDAO">
					<ref local="managermodelDAO" />
				</property>
				<property name="accountDAO">
					<ref bean="accountDAO" />
				</property>
			</bean>
		</property>
		<property name="transactionAttributes">
			<props>
				<prop key="remove*">PROPAGATION_REQUIRED</prop>
				<prop key="get*">PROPAGATION_REQUIRED,readOnly</prop>
				<prop key="update*">PROPAGATION_REQUIRED,-ManagerInClassException,-ManagerInCollegeException,-ManagerInSchoolException</prop>
				<prop key="save*">PROPAGATION_REQUIRED</prop>
				<prop key="delete*">PROPAGATION_REQUIRED</prop>
				<prop key="*">PROPAGATION_REQUIRED</prop>
			</props>
		</property>
	</bean>

	<bean id="studentService" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="transactionManager">
			<ref bean="transactionManager" />
		</property>
		<property name="target">
			<bean class="org.king.classmanage.service.impl.StudentServiceImpl">
				<property name="studentmodelDAO">
					<ref local="studentmodelDAO" />
				</property>
				<property name="yxGraduateDAO">
					<ref local="yxGraduateDAO" />
				</property>
				<property name="classmodelDAO">
					<ref bean="classmodelDAO" />
				</property>				
				<property name="dormitorymodelDAO">
					<ref bean="dormitorymodelDAO" />
				</property>
				<property name="departmentDAO">
					<ref bean="departmentDAO" />
				</property>
				<property name="jdbcTemplate">
					<ref bean="jdbcTemplate" />
				</property>
				<property name="stuAdddelhisDAO">
					<ref local="stuAdddelhisDAO" />
				</property>
				<property name="stucheckininfoDAO">
					<ref bean="stucheckininfoDAO" />
				</property>
				<property name="stuhealthinfoDAO">
					<ref bean="stuhealthinfoDAO" />
				</property>
				<property name="stuarchivesinfoDAO">
					<ref bean="stuarchivesinfoDAO" />
				</property>
				<property name="stuCardfeeInfoDAO">
					<ref bean="stuCardfeeInfoDAO" />
				</property>
				<property name="accountDAO">
					<ref bean="accountDAO" />
				</property>
				<property name="roleDAO">
					<ref bean="roleDAO" />
				</property>
			</bean>
		</property>
		<property name="transactionAttributes">
			<props>
				<prop key="remove*">PROPAGATION_REQUIRED</prop>
				<prop key="get*">PROPAGATION_REQUIRED</prop>
				<prop key="update*">PROPAGATION_REQUIRED</prop>
				<prop key="save*">PROPAGATION_REQUIRED</prop>
				<prop key="delete*">PROPAGATION_REQUIRED</prop>
				<prop key="distributAbroadtoClass">PROPAGATION_REQUIRED</prop>				
				<prop key="*">PROPAGATION_REQUIRED</prop>
			</props>
		</property>
	</bean>
	

</beans>
