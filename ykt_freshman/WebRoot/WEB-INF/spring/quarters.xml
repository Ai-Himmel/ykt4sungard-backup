<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	
	<!-- ************************** SERVICE SETTING *****************************-->
	
	<bean id="quartersDeptService" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="transactionManager">
			<ref bean="transactionManager" />
		</property>
		<property name="target">
			<bean class="org.king.quarters.service.impl.DeptServiceImpl">
				<property name="allDAO">
					<ref bean="allDAO" />
				</property>
				
			</bean>
		</property>
		<property name="transactionAttributes">
			<props>
				
				<prop key="*">PROPAGATION_REQUIRED</prop>
			</props>
		</property>
	</bean>
	
	<bean id="quartersManagerService" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="transactionManager">
			<ref bean="transactionManager" />
		</property>
		<property name="target">
			<bean class="org.king.quarters.service.impl.ManagerServiceImpl">
				<property name="allDAO">
					<ref bean="allDAO" />
				</property>
				<property name="securityService">
					<ref bean="securityService" />
				</property>
				<property name="accountService">
					<ref bean="accountService" />
				</property>
				<property name="managerService">
					<ref bean="managerService" />
				</property>
			</bean>
		</property>
		<property name="transactionAttributes">
			<props>
				
				<prop key="*">PROPAGATION_REQUIRED</prop>
			</props>
		</property>
	</bean>
	<bean id="quartersService" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="transactionManager">
			<ref bean="transactionManager" />
		</property>
		<property name="target">
			<bean class="org.king.quarters.service.impl.QuartersServiceImpl">
				<property name="allDAO">
					<ref bean="allDAO" />
				</property>
				<property name="directoryService">
					<ref bean="directoryService" />
				</property>
				
			</bean>
		</property>
		<property name="transactionAttributes">
			<props>
				
				<prop key="*">PROPAGATION_REQUIRED</prop>
			</props>
		</property>
	</bean>
	<bean id="quartersMaintain" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="transactionManager">
			<ref bean="transactionManager" />
		</property>
		<property name="target">
			<bean class="org.king.quarters.web.js.QuartersMaintain">
				<property name="directoryService">
					<ref bean="directoryService" />
				</property>
				
			</bean>
		</property>
		<property name="transactionAttributes">
			<props>
				
				<prop key="*">PROPAGATION_REQUIRED</prop>
			</props>
		</property>
	</bean>
	<bean id="quartersManagerMaintain" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="transactionManager">
			<ref bean="transactionManager" />
		</property>
		<property name="target">
			<bean class="org.king.quarters.web.js.ManagerMaintain">
				
				
			</bean>
		</property>
		<property name="transactionAttributes">
			<props>
				
				<prop key="*">PROPAGATION_REQUIRED</prop>
			</props>
		</property>
	</bean>
	<bean id="quartersNoticeService" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="transactionManager">
			<ref bean="transactionManager" />
		</property>
		<property name="target">
			<bean class="org.king.quarters.service.impl.QuartersNoticeServiceImpl">
				<property name="allDAO">
					<ref bean="allDAO" />
				</property>
				<property name="quartersService">
					<ref local="quartersService" />
				</property>
				
			</bean>
		</property>
		<property name="transactionAttributes">
			<props>
				
				<prop key="*">PROPAGATION_REQUIRED</prop>
			</props>
		</property>
	</bean>
</beans>
