<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<!-- ************************** DAO SETTING *********************************-->
	<!-- DAO object: Hibernate implementation -->
	<bean id="stuarriveinfoDAO" class="org.king.rcvmanage.dao.hibernate.StuarriveinfoDAOHibernate">
		<property name="baseDAO">
			<ref bean="baseDAO" />
		</property>
	</bean>

	<!-- ************************** SERVICE SETTING *****************************-->
	<!-- ***** security SERVICE *****-->
    <bean id="rcvmanageService" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="transactionManager">
			<ref bean="transactionManager" />
		</property>
		<property name="target">
			<bean class="org.king.rcvmanage.service.impl.RcvmanageServiceImpl">
				<property name="stuarriveinfoDAO">
					<ref local="stuarriveinfoDAO" />
				</property>
			</bean>
		</property>
		<property name="transactionAttributes">
			<props>
				<prop key="save*">PROPAGATION_REQUIRED</prop>
				<prop key="update*">PROPAGATION_REQUIRED</prop>
				<prop key="delete*">PROPAGATION_REQUIRED</prop>
				<prop key="*">PROPAGATION_REQUIRED,readOnly</prop>
			</props>
		</property>
	</bean>

</beans>
